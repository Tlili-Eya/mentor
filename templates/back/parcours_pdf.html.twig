<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
      body { font-family: DejaVu Sans, Arial, sans-serif; font-size: 12px; }
      h1 { text-align: center; }
      table { width: 100%; border-collapse: collapse; margin-bottom: 8px; }
      th, td { border: 1px solid #ddd; padding: 6px; }
      th { background: #f2f2f2; }
      .section { margin-bottom: 12px; }
    </style>
  </head>
  <body>
    <h1>Parcours - Export</h1>
    <p>Export généré le {{ "now"|date('d/m/Y H:i') }}</p>

    {% for p in parcours %}
      <div class="section">
        <table>
          <tr>
            <th style="width:8%">ID</th>
            <th style="width:20%">Titre</th>
            <th style="width:15%">Type</th>
            <th style="width:15%">Dates</th>
            <th style="width:42%">Détails</th>
          </tr>
          <tr>
            <td>{{ p.id }}</td>
            <td>{{ p.titre }}</td>
            <td>{{ p.typeParcours }}</td>
            <td>
              {% if p.dateDebut %}{{ p.dateDebut|date('d/m/Y') }}{% endif %}
              {% if p.dateFin %} → {{ p.dateFin|date('d/m/Y') }}{% endif %}
            </td>
            <td>
              <strong>Description:</strong>
              <div>{{ p.description|nl2br }}</div>
              <div style="margin-top:6px">
                {% if p.typeParcours == 'scolaire' %}
                  <div><strong>Établissement:</strong> {{ p.etablissement }}</div>
                  <div><strong>Diplôme:</strong> {{ p.diplome }}</div>
                  <div><strong>Spécialité:</strong> {{ p.specialite }}</div>
                {% elseif p.typeParcours == 'professionnel' %}
                  <div><strong>Entreprise:</strong> {{ p.entreprise }}</div>
                  <div><strong>Poste:</strong> {{ p.poste }}</div>
                  <div><strong>Contrat:</strong> {{ p.typeContrat }}</div>
                {% else %}
                  <div><strong>Organisme:</strong> {{ p.etablissement }}</div>
                  <div><strong>Certification:</strong> {{ p.diplome }}</div>
                {% endif %}
              </div>
            </td>
          </tr>
        </table>
      </div>
    {% endfor %}
  </body>
</html>
