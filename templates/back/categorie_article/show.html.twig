{% extends 'back/basem.html.twig' %}

{% block title %}Détails Catégorie - {{ categorie.nomCategorie }}{% endblock %}

{% block body %}
<div class="page-title" style="background-color: #9dbbce; padding: 20px 0;">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0" style="color: #102c59; font-weight: 700;">Détails Catégorie</h1>
    <nav class="breadcrumbs">
      <ol style="list-style: none; padding: 0; margin: 0; display: flex; gap: 10px;">
        <li><a href="{{ path('back_home') }}" style="color: #102c59; text-decoration: none;">Accueil</a></li>
        <li><a href="{{ path('app_categorie_article_index') }}" style="color: #102c59; text-decoration: none;">Catégories</a></li>
        <li style="color: #d52e28;">› Détails</li>
      </ol>
    </nav>
  </div>
</div>

<section class="section" style="padding: 40px 0;">
  <div class="container">
    
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card" style="border: 1px solid #9dbbce; border-radius: 8px; box-shadow: 0 4px 12px rgba(16, 44, 89, 0.1);">
          <div class="card-body p-4">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="mb-0" style="color: #102c59;">{{ categorie.nomCategorie }}</h2>
              <div>
                <a href="{{ path('app_categorie_article_edit', {'id': categorie.id}) }}" 
                   class="btn btn-sm" 
                   style="border: 1px solid #102c59; color: #102c59; border-radius: 6px;">
                  <i class="bi bi-pencil"></i> Modifier
                </a>
              </div>
            </div>

            <div class="mb-4">
              <h5 class="fw-bold" style="color: #102c59; margin-bottom: 10px;">Description</h5>
              <p class="mb-0 p-3 rounded" style="background-color: rgba(157, 187, 206, 0.1); color: #102c59; border-radius: 6px;">
                {{ categorie.description ? categorie.description : 'Aucune description' }}
              </p>
            </div>

            <div class="row mb-4">
              <div class="col-md-6 mb-3">
                <h5 class="fw-bold" style="color: #102c59; margin-bottom: 10px;">Créée le</h5>
                <p class="mb-0" style="color: #102c59;">
                  <i class="bi bi-calendar-plus me-1" style="color: #102c59;"></i>
                  {{ categorie.createdAt ? categorie.createdAt|date('d/m/Y H:i') : 'Non spécifié' }}
                </p>
              </div>
              <div class="col-md-6 mb-3">
                <h5 class="fw-bold" style="color: #102c59; margin-bottom: 10px;">Modifiée le</h5>
                <p class="mb-0" style="color: #102c59;">
                  <i class="bi bi-clock-history me-1" style="color: #102c59;"></i>
                  {{ categorie.updatedAt ? categorie.updatedAt|date('d/m/Y H:i') : 'Jamais modifiée' }}
                </p>
              </div>
            </div>

            <div class="mb-3">
              <h5 class="fw-bold" style="color: #102c59; margin-bottom: 10px;">Créée par</h5>
              <p class="mb-0" style="color: #102c59;">
                <i class="bi bi-person me-1" style="color: #102c59;"></i>
                {% if categorie.auteur %}
                  {{ categorie.auteur.nom }} {{ categorie.auteur.prenom }}
                {% else %}
                  Non spécifié
                {% endif %}
              </p>
            </div>

            <hr class="my-4" style="border-color: #9dbbce; opacity: 0.5;">

            <div class="mb-4">
              <h5 class="fw-bold" style="color: #102c59; margin-bottom: 15px;">
                <i class="bi bi-journal-text me-2" style="color: #102c59;"></i>
                Articles dans cette catégorie ({{ categorie.referenceArticles|length }})
              </h5>
              {% if categorie.referenceArticles|length > 0 %}
                <div class="list-group">
                  {% for article in categorie.referenceArticles %}
                    <a href="{{ path('app_reference_article_show', {'id': article.id}) }}" 
                       class="list-group-item list-group-item-action"
                       style="border-color: #9dbbce; color: #102c59; transition: all 0.3s ease;">
                      <div class="d-flex justify-content-between align-items-center">
                        <div>
                          <h6 class="mb-1" style="color: #102c59;">{{ article.titre }}</h6>
                          <small style="color: #102c59; opacity: 0.7;">
                            {{ article.createdAt|date('d/m/Y') }} • 
                            <span style="color: {{ article.published ? '#28a745' : '#ffc107' }}; font-weight: 500;">
                              {{ article.published ? 'Publié' : 'Brouillon' }}
                            </span>
                          </small>
                        </div>
                        <i class="bi bi-arrow-right" style="color: #9dbbce;"></i>
                      </div>
                    </a>
                  {% endfor %}
                </div>
              {% else %}
                <p class="text-muted mb-0 p-3 rounded" style="background-color: rgba(157, 187, 206, 0.1); color: #102c59; opacity: 0.7; border-radius: 6px;">
                  <i class="bi bi-info-circle me-2"></i>
                  Aucun article dans cette catégorie.
                </p>
              {% endif %}
            </div>

          </div>
        </div>

        <div class="d-flex justify-content-between mt-4 pt-3 border-top" style="border-color: #9dbbce !important;">
          <a href="{{ path('app_categorie_article_index') }}" class="btn" style="border: 1px solid #9dbbce; color: #102c59; border-radius: 6px; padding: 10px 25px;">
            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
          </a>
          
          <form method="post" action="{{ path('app_categorie_article_delete', {'id': categorie.id}) }}" 
                onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
            <button type="submit" class="btn" style="background-color: #d52e28; color: white; border: none; border-radius: 6px; padding: 10px 25px;">
              <i class="bi bi-trash me-1"></i> Supprimer
            </button>
          </form>
        </div>

      </div>
    </div>

  </div>
</section>

<style>
.card {
  border-radius: 12px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(16, 44, 89, 0.15);
}

.btn {
  padding: 0.75rem 1.5rem;
  font-weight: 500;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.btn[style*="background-color: #d52e28"]:hover {
  background-color: #b32520 !important;
}

.btn[style*="border: 1px solid #9dbbce"]:hover {
  background-color: rgba(157, 187, 206, 0.1);
  color: #102c59;
}

.btn[style*="border: 1px solid #102c59"]:hover {
  background-color: rgba(16, 44, 89, 0.1);
  color: #102c59;
}

.list-group-item {
  border-radius: 6px !important;
  margin-bottom: 5px;
  transition: all 0.3s ease;
}

.list-group-item:hover {
  background-color: rgba(157, 187, 206, 0.1) !important;
  border-color: #102c59 !important;
  transform: translateX(5px);
}

h5.fw-bold {
  position: relative;
  padding-bottom: 8px;
}

h5.fw-bold::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 40px;
  height: 3px;
  background-color: #9dbbce;
  border-radius: 2px;
}

.bi {
  vertical-align: middle;
}

.rounded {
  border-radius: 8px;
}

.border-top {
  border-top-width: 2px !important;
}

hr {
  border-top-width: 2px;
}

/* Style pour les articles */
.list-group-item h6 {
  font-weight: 600;
}

.list-group-item small {
  font-size: 0.85rem;
}

/* Animation pour les éléments de la liste */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.list-group-item {
  animation: fadeIn 0.3s ease-out forwards;
  animation-delay: calc(var(--item-index) * 0.1s);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Animation d'entrée pour la carte
  const card = document.querySelector('.card');
  if (card) {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    
    setTimeout(() => {
      card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }, 100);
  }
  
  // Animation séquentielle pour les articles
  const articles = document.querySelectorAll('.list-group-item');
  articles.forEach((article, index) => {
    article.style.setProperty('--item-index', index);
  });
  
  // Effet pour le bouton de suppression
  const deleteButton = document.querySelector('button[type="submit"]');
  if (deleteButton) {
    deleteButton.addEventListener('mouseover', function() {
      this.style.boxShadow = '0 4px 8px rgba(213, 46, 40, 0.3)';
    });
    
    deleteButton.addEventListener('mouseout', function() {
      this.style.boxShadow = 'none';
    });
  }
  
  // Effet pour le bouton de retour
  const backButton = document.querySelector('a[href*="index"]');
  if (backButton) {
    backButton.addEventListener('mouseenter', function() {
      this.style.borderColor = '#102c59';
      this.style.backgroundColor = 'rgba(16, 44, 89, 0.05)';
    });
    
    backButton.addEventListener('mouseleave', function() {
      this.style.borderColor = '#9dbbce';
      this.style.backgroundColor = 'transparent';
    });
  }
  
  // Copier le nom de la catégorie
  const categoryTitle = document.querySelector('h2.mb-0');
  if (categoryTitle) {
    categoryTitle.style.cursor = 'pointer';
    categoryTitle.title = 'Cliquer pour copier le nom';
    
    categoryTitle.addEventListener('click', function() {
      const textToCopy = this.textContent;
      navigator.clipboard.writeText(textToCopy).then(() => {
        const originalText = this.textContent;
        this.innerHTML = '<i class="bi bi-check2 me-2"></i> Copié !';
        this.style.color = '#28a745';
        
        setTimeout(() => {
          this.innerHTML = originalText;
          this.style.color = '#102c59';
        }, 2000);
      });
    });
  }
});
</script>
{% endblock %}