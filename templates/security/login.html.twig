<!-- Modal QR Code -->
<div id="qrModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:9999; justify-content:center; align-items:center;">
    <div style="background:white; padding:30px; border-radius:20px; text-align:center; max-width:350px;">
        <h3 style="color:#102c59; margin-bottom:15px;">üì± Scannez avec votre t√©l√©phone</h3>
        <img id="qrImage" src="" style="width:250px; height:250px; border-radius:10px;">
        <p style="color:#666; margin-top:15px; font-size:0.9rem;">Puis validez avec Face ID sur votre t√©l√©phone</p>
        <p id="qrStatus" style="color:#102c59; font-weight:600; margin-top:10px;">‚è≥ En attente...</p>
        <button onclick="closeQR()" style="margin-top:15px; padding:10px 25px; background:#d52e28; color:white; border:none; border-radius:10px; cursor:pointer;">Annuler</button>
    </div>
</div>

<script>
let statusInterval;

function showPasskeyQR() {
    document.getElementById('qrImage').src = '/webauthn/login/qr?' + Date.now();
    document.getElementById('qrModal').style.display = 'flex';
    document.getElementById('qrStatus').textContent = '‚è≥ En attente...';
    
    statusInterval = setInterval(async () => {
        const res = await fetch('/webauthn/login/status');
        const data = await res.json();
        
        if (data.status === 'confirmed') {
            clearInterval(statusInterval);
            document.getElementById('qrStatus').textContent = '‚úÖ Connect√© !';
            setTimeout(() => window.location.href = '/home', 1000);
        }
    }, 2000);
}

function closeQR() {
    clearInterval(statusInterval);
    document.getElementById('qrModal').style.display = 'none';
}
</script>

