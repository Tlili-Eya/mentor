{% extends 'front/base.html.twig' %}

{% block title %}Mes Objectifs - {{ parent() }}{% endblock %}

{% block body %}
<main class="main">


  <!-- Page Title -->
  <div class="page-title light-background">
    <div class="container d-lg-flex justify-content-between align-items-center flex-wrap gap-3">
    
      <h1 class="mb-2 mb-lg-0">MES OBJECTIFS</h1>
      
      <div class="d-flex align-items-center gap-3">
        <!-- Recherche -->
        <!-- Barre de recherche améliorée -->
<!-- Barre de recherche par titre objectif -->
<form method="GET" class="d-flex align-items-center gap-2" style="width: 350px;">
  <div class="position-relative flex-grow-1">
    <input type="text" name="titre" 
           class="form-control rounded-pill ps-4 pe-5 py-2" 
           placeholder="Rechercher par titre objectif..."
           value="{{ app.request.query.get('titre')|default('') }}">
    <button type="submit" class="btn position-absolute top-50 end-0 translate-middle-y me-3">
      <i class="bi bi-search"></i>
    </button>
  </div>

  {% if app.request.query.get('titre') %}
    <a href="{{ path('front_events') }}" class="btn btn-outline-secondary btn-sm rounded-pill">
      Effacer
    </a>
  {% endif %}
</form>
        <form method="get" action="" class="d-flex align-items-center">
  <label for="sort" class="me-2">Trier:</label>
  <select name="sort"
        id="sort"
        class="form-select form-select-sm rounded-pill"
        onchange="this.form.submit()">

  <option value="datedebut"
    {{ app.request.get('sort', 'datedebut') == 'datedebut' ? 'selected' : '' }}>
    Date début
  </option>

  <option value="datefin"
    {{ app.request.get('sort') == 'datefin' ? 'selected' : '' }}>
    Date fin
  </option>

  <option value="statut"
    {{ app.request.get('sort') == 'statut' ? 'selected' : '' }}>
    Statut
  </option>

  <option value="titre"
    {{ app.request.get('sort') == 'titre' ? 'selected' : '' }}>
    Titre
  </option>

</select>

</form>


        <!-- Bouton qui ouvre le modal -->
      <button type="button"
        class="btn btn-outline-primary btn-sm rounded-pill d-flex align-items-center gap-2 px-3"
        data-bs-toggle="modal"
        data-bs-target="#addObjectifModal"
        title="Ajouter un objectif">
  <i class="bi bi-plus-lg"></i>
  Ajouter objectif
</button>

      </div>
    </div>
  </div><!-- End Page Title -->

  <!-- Liste des objectifs -->
  <section id="mes-objectifs" class="section courses-events">
    <div class="container" data-aos="fade-up">

      <div class="table-responsive">
   <div class="mb-4 d-flex flex-wrap gap-3">
   <div class="mb-4 d-flex flex-wrap gap-3">
    <!-- Total -->
    <div class="badge" style="background-color: rgba(122, 154, 173, 0.15); color: #7a9aad; border: 1px solid rgba(122, 154, 173, 0.3); font-size: 1rem; padding: 0.5rem 1.25rem; border-radius: 50rem; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);">
        <i class="bi bi-list-ul me-2"></i>
        Total : {{ total }} objectif{{ total > 1 ? 's' : '' }}
    </div>

    <!-- Atteints -->
    <div class="badge" style="background-color: rgba(122, 154, 173, 0.15); color: #7a9aad; border: 1px solid rgba(122, 154, 173, 0.3); font-size: 1rem; padding: 0.5rem 1.25rem; border-radius: 50rem; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);">
        <i class="bi bi-check-circle me-2"></i>
        Atteints : {{ atteints }}
    </div>

    <!-- En cours -->
    <div class="badge" style="background-color: rgba(122, 154, 173, 0.15); color: #7a9aad; border: 1px solid rgba(122, 154, 173, 0.3); font-size: 1rem; padding: 0.5rem 1.25rem; border-radius: 50rem; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);">
        <i class="bi bi-hourglass me-2"></i>
        En cours : {{ enCours }}
    </div>

    <!-- Abandonnés -->
    <div class="badge" style="background-color: rgba(122, 154, 173, 0.15); color: #7a9aad; border: 1px solid rgba(122, 154, 173, 0.3); font-size: 1rem; padding: 0.5rem 1.25rem; border-radius: 50rem; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);">
        <i class="bi bi-x-circle me-2"></i>
        Abandonnés : {{ abandonnes }}
    </div>
</div>
</div>
        <table class="table table-hover align-middle objectif-table">
      <div class="mb-4 d-flex justify-content-end gap-2">
    <a href="{{ path('front_events_export_excel') }}" class="badge bg-success-subtle text-success border border-success-subtle fs-6 px-4 py-2 rounded-pill shadow-sm">
        <i class="bi bi-file-earmark-excel-fill me-2"></i>
        Exporter Excel
    </a>

    <a href="{{ path('front_events_export_word') }}" class="badge bg-primary-subtle text-primary border border-primary-subtle fs-6 px-4 py-2 rounded-pill shadow-sm">
        <i class="bi bi-file-earmark-word-fill me-2"></i>
        Exporter Word
    </a>
    <!-- Rafraîchir -->
    <!-- Bouton Rafraîchir (rond bleu, bordure subtile, hover doux) -->

</div>

          <thead>
          
            <tr>
              <th class="text-center">N°</th>
              <th>ID Objectif</th>
              <th>Titre objectif</th>
              <th>Date début</th>
              <th>Date fin</th>
              <th>Statut</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
         <tbody>
  {% if objectifs is defined and objectifs|length > 0 %}
    {% for objectif in objectifs %}
    <tr>
      <td class="text-center fw-bold">{{ loop.index }}</td>
      <td><strong>{{ objectif.idObjectif ?? ('PPD' ~ objectif.id) }}</strong></td>
      <td>{{ objectif.titre ?? 'Sans titre' }}</td>
      <td>{{ objectif.datedebut ? objectif.datedebut|date('d/m/Y') : '—' }}</td>
      <td>{{ objectif.datefin ? objectif.datefin|date('d/m/Y') : '—' }}</td>

      <td>
        <span class="badge rounded-pill px-3 py-2 fs-6
          {% if objectif.statut.value == 'validee' %}bg-success text-white
          {% elseif objectif.statut.value == 'en_cours' %}bg-warning text-dark
          {% elseif objectif.statut.value == 'refusee' %}bg-danger text-white
          {% else %}bg-secondary text-white{% endif %}">
          {{ objectif.statut ? objectif.statut.value|capitalize : 'Inconnu' }}
        </span>
      </td>

      <td class="text-end">
        <div class="d-flex gap-2 justify-content-end flex-wrap">

          <!-- 1. Aller au programme -->
          <a href="{{ path('front_programme_show', {id: objectif.programme.id}) }}"
             class="btn btn-sm btn-outline-primary rounded-circle"
             title="Voir le programme">
            <i class="bi bi-list-check"></i>
          </a>

          <!-- 2. Voir les détails de l'objectif -->
          <a href="{{ path('front_objectif_show', {id: objectif.id}) }}"
             class="btn btn-sm btn-outline-info rounded-circle"
             title="Détails de l'objectif">
            <i class="bi bi-eye"></i>
          </a>

          <!-- 3. Supprimer -->
          <form method="post"
                action="{{ path('front_objectif_delete', {id: objectif.id}) }}"
                onsubmit="return confirm('Supprimer cet objectif ? Cette action est irréversible.');"
                style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objectif.id) }}">
            <button type="submit"
                    class="btn btn-sm btn-outline-danger rounded-circle"
                    title="Supprimer l'objectif">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        
        </div>
      </td>
    </tr>
    {% endfor %}
  {% else %}
    <tr>
      <td colspan="7" class="text-center py-5 text-muted">
        <i class="bi bi-journal-x display-4 d-block mb-3"></i>
        Aucun objectif enregistré pour le moment.
      </td>
    </tr>
  {% endif %}
</tbody>


        </table>
         <form method="post" action="{{ path('front_events_reset') }}" onsubmit="return confirm('Attention ! Cela va SUPPRIMER TOUS les objectifs. Continuer ?');" class="d-inline">
    <button type="submit" class="btn btn-outline-danger btn-sm ">
        <i class="bi bi-trash3"></i> Réinitialiser tous
    </button>
</form>
       
      </div>

    </div>
  </section>
  

  <!-- ==================== MODAL AJOUT OBJECTIF ==================== -->
  <div class="modal fade" id="addObjectifModal" tabindex="-1" aria-labelledby="addObjectifModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content rounded-4 shadow">

        <div class="modal-header border-0 pb-0">
          <h5 class="modal-title fs-4 fw-bold" id="addObjectifModalLabel">Nouvel Objectif</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4 pt-2">
          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

          {# Affichage des erreurs globales #}
          {{ form_errors(form) }}

         <div class="mb-3">
  {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
  {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
  <div class="invalid-feedback d-block">
    {{ form_errors(form.titre) }}
  </div>
</div>

<div class="mb-3">
  {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
  {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
  <div class="invalid-feedback d-block">
    {{ form_errors(form.description) }}
  </div>
</div>

<div class="row g-3">
  <div class="col-md-6 mb-3">
    {{ form_label(form.datedebut, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
    {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
    <div class="invalid-feedback d-block">
      {{ form_errors(form.datedebut) }}
    </div>
  </div>

  <div class="col-md-6 mb-3">
    {{ form_label(form.datefin, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
    {{ form_widget(form.datefin, {'attr': {'class': 'form-control'}}) }}
    <div class="invalid-feedback d-block">
      {{ form_errors(form.datefin) }}
    </div>
  </div>
</div>


   <div class="d-flex gap-3 justify-content-end mt-4">

  <!-- Bouton Annuler -->
  <button type="button"
          class="btn btn-outline-primary btn-sm rounded-pill px-4 d-flex align-items-center gap-2"
          data-bs-dismiss="modal"
          onclick="document.getElementById('addObjectifModal').querySelector('form').reset();">
    
    Annuler
  </button>

  <!-- Bouton Créer -->
  <button type="submit"
          class="btn btn-danger btn-sm rounded-pill px-4 d-flex align-items-center gap-2">
    
    Créer
  </button>

</div>


          {{ form_end(form) }}
        </div>

      </div>
    </div>
  </div>
  <!-- ==================== FIN MODAL ==================== -->

  {# Script pour rouvrir le modal si le formulaire est invalide #}
  {% if showModal %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modal = new bootstrap.Modal(
            document.getElementById('addObjectifModal')
        );
        modal.show();
    });
</script>
{% endif %}


</main>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .objectif-table thead th {
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
      color: var(--default-color);
      opacity: 0.8;
      font-weight: 600;
      border-bottom: 2px solid color-mix(in srgb, var(--accent-color), transparent 80%);
    }
    .objectif-table td { vertical-align: middle; font-size: 0.98rem; }
    .objectif-table tr:hover { background-color: color-mix(in srgb, var(--accent-color), transparent 96%); transition: background-color 0.2s; }
    .objectif-table .btn-rounded-circle {
      width: 32px; height: 32px; padding: 0;
      display: inline-flex; align-items: center; justify-content: center;
      border-radius: 50% !important;
      transition: all 0.25s;
    }
      ..invalid-feedback {
      color: #dc3545 !important;
      font-size: 0.9rem;
      margin-top: 6px;
    }

    
    .objectif-table .btn-rounded-circle:hover { transform: scale(1.15); }
  </style>
{% endblock %}
