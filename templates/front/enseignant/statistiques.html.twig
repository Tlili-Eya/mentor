{% extends 'front/basem.html.twig' %}

{% block title %}Mes Statistiques{% endblock %}

{% block body %}
<div class="container">
    <h1>Mes Statistiques</h1>
    
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>{{ stats.articles_lus ?? 0 }}</h3>
                    <p>Articles lus</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>{{ stats.plans_consultes ?? 0 }}</h3>
                    <p>Plans consultés</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>{{ stats.reclamations_envoyees ?? 0 }}</h3>
                    <p>Réclamations envoyées</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Activité récente</h5>
                    <p class="text-muted">Vos statistiques d'activité seront disponibles prochainement.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}