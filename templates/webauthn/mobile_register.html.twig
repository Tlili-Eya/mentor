<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>FACE ID v9 UNIVERSAL</title>
    <script src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
    <style>
        :root { --primary: #007bff; --bg: #f8f9fa; --text: #333; }
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 0; padding: 20px; text-align: center; background: var(--bg); color: var(--text); }
        .card { background: white; border-radius: 15px; padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); max-width: 400px; margin: 0 auto; }
        h1 { font-size: 1.5rem; margin-bottom: 20px; color: var(--primary); }
        .v-container { width: 280px; height: 280px; margin: 0 auto 20px; border-radius: 50%; overflow: hidden; border: 4px solid var(--primary); position: relative; background: #eee; }
        video { width: 100%; height: 100%; object-fit: cover; }
        .btn { display: inline-block; width: 100%; padding: 15px; background: var(--primary); color: white; border: none; border-radius: 10px; font-weight: bold; font-size: 1.1rem; cursor: pointer; transition: opacity 0.2s; }
        .btn:disabled { background: #ccc; cursor: not-allowed; }
        #status { margin-top: 20px; font-size: 0.9rem; color: #666; font-style: italic; }
        .loader { border: 3px solid #f3f3f3; border-top: 3px solid var(--primary); border-radius: 50%; width: 20px; height: 20px; animation: spin 1s linear infinite; display: inline-block; vertical-align: middle; margin-right: 10px; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
</head>
<body>
    <div class="card">
        <h1>ðŸŒŸ Inscription BiomÃ©trique ðŸŒŸ</h1>
        <div class="v-container">
            <video id="v" autoplay muted playsinline></video>
        </div>
        <button class="btn" id="b" disabled>Chargement...</button>
        <div id="status"><span id="loader" class="loader"></span>Initialisation du systÃ¨me...</div>
    </div>

    <script>
        const v = document.getElementById('v');
        const b = document.getElementById('b');
        const s = document.getElementById('status');
        const l = document.getElementById('loader');

        function updateStatus(text, showLoader = true) {
            s.innerText = text;
            if (showLoader) {
                const span = document.createElement('span');
                span.className = 'loader';
                s.prepend(span);
            }
        }

        async function init() {
            try {
                updateStatus("Chargement des modÃ¨les...");
                
                // Utilisation de l'origine absolue pour Ã©viter les erreurs de pattern sur Safari
                const MODEL_URL = window.location.origin + '/models';
                
                await Promise.all([
                    faceapi.nets.tinyFaceDetector.loadFromUri(MODEL_URL),
                    faceapi.nets.faceLandmark68Net.loadFromUri(MODEL_URL),
                    faceapi.nets.faceRecognitionNet.loadFromUri(MODEL_URL)
                ]);

                updateStatus("AccÃ¨s Ã  la camÃ©ra...");
                const constraints = { 
                    video: { 
                        facingMode: "user",
                        width: { ideal: 640 },
                        height: { ideal: 480 }
                    } 
                };

                const stream = await navigator.mediaDevices.getUserMedia(constraints);
                v.srcObject = stream;
                
                // Indispensable pour Safari/iOS
                await v.play();

                updateStatus("PrÃªt pour l'enregistrement", false);
                b.innerText = "S'ENREGISTRER";
                b.disabled = false;

            } catch (err) {
                console.error(err);
                s.innerHTML = `<span style="color:red">Erreur: ${err.message}</span>`;
                alert("Erreur fatale: " + err.message);
            }
        }

        b.onclick = async () => {
            try {
                b.disabled = true;
                updateStatus("Analyse du visage...");
                
                const detection = await faceapi.detectSingleFace(v, new faceapi.TinyFaceDetectorOptions())
                    .withFaceLandmarks()
                    .withFaceDescriptor();

                if (!detection) {
                    alert("Visage non dÃ©tectÃ©. Assurez-vous d'Ãªtre bien Ã©clairÃ© et face Ã  la camÃ©ra.");
                    b.disabled = false;
                    updateStatus("PrÃªt pour l'enregistrement", false);
                    return;
                }

                updateStatus("Finalisation de l'inscription...");
                
                const response = await fetch(window.location.origin + '/webauthn/register/confirm/' + "{{ token }}", {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        credential_id: 'face_id_v9_universal',
                        public_key: JSON.stringify(Array.from(detection.descriptor))
                    })
                });

                const data = await response.json();
                if (data.success) {
                    updateStatus("âœ… SuccÃ¨s ! Vous pouvez fermer cette page.", false);
                    b.style.display = 'none';
                    alert("Inscription rÃ©ussie ! Retournez sur votre ordinateur.");
                } else {
                    alert("Erreur serveur : " + data.message);
                    b.disabled = false;
                    updateStatus("PrÃªt pour l'enregistrement", false);
                }

            } catch (err) {
                console.error(err);
                alert("Erreur lors de la capture : " + err.message);
                b.disabled = false;
                updateStatus("PrÃªt pour l'enregistrement", false);
            }
        };

        // DÃ©marrage aprÃ¨s chargement de la page
        window.onload = () => setTimeout(init, 100);
    </script>
</body>
</html>
