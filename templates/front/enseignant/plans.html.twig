{% extends 'front/enseignant/basem.html.twig' %}

{% block title %}Plans d'Actions - Enseignant{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- En-tête avec statistiques -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 style="color: #102c59;">Plans d'Actions</h1>
            <p class="text-muted" style="color: #9dbbce;">Gérez et consultez vos plans d'actions pédagogiques et administratifs</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="p-3 rounded" style="background-color: #f8fafc; border-left: 4px solid #102c59;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0" style="color: #102c59;">{{ total }}</h4>
                        <small style="color: #9dbbce;">plan(s) trouvé(s)</small>
                    </div>
                    <i class="bi bi-clipboard-check fs-3" style="color: #102c59;"></i>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Liste des plans -->
    <div class="row">
        {% if plans|length > 0 %}
            {% for plan in plans %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift" style="border-top: 4px solid {% if plan.sortieAI and plan.sortieAI.categorieSortie %}{% if plan.sortieAI.categorieSortie.value == 'PEDAGOGIQUE' %}#102c59{% elseif plan.sortieAI.categorieSortie.value == 'ADMINISTRATIVE' %}#9dbbce{% else %}#d52e28{% endif %}{% else %}#cccccc{% endif %};">
                        <div class="card-body">
                           
                            <!-- Titre -->
                            <h5 class="card-title mb-3" style="color: #102c59; line-height: 1.4;">
                                {{ plan.decision }}
                            </h5>
                            
                            <!-- Description -->
                            <p class="card-text mb-4" style="color: #5a6c7d; line-height: 1.6;">
                                {{ plan.description|striptags|slice(0, 120) }}...
                            </p>
                            
                            <!-- Date -->
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar me-2" style="color: #d52e28;"></i>
                                <small style="color: #9dbbce;">
                                    {% if plan.updatedAt %}
                                        Mis à jour : {{ plan.updatedAt|date('d/m/Y') }}
                                    {% else %}
                                        Créé : {{ plan.createdAt|date('d/m/Y') }}
                                    {% endif %}
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_enseignant_plan_detail', {'id': plan.id}) }}" class="btn text-white" style="background-color: #102c59; border-color: #102c59;">
                                    <i class="bi bi-eye me-1"></i> Voir détails
                                </a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-clipboard-x display-1" style="color: #9dbbce;"></i>
                    </div>
                    <h4 class="mb-3" style="color: #102c59;">Aucun plan trouvé</h4>
                    <p class="mb-4" style="color: #d52e28;">
                        {% if search or categorie %}
                            Aucun plan ne correspond à vos critères de recherche.
                        {% else %}
                            Aucun plan n'est disponible pour le moment.
                        {% endif %}
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_enseignant_plans') }}" class="btn text-white" style="background-color: #102c59; border-color: #102c59;">
                            <i class="bi bi-arrow-clockwise me-1"></i> Réinitialiser
                        </a>
                        <a href="{{ path('app_enseignant_dashboard') }}" class="btn text-white" style="background-color: #d52e28; border-color: #d52e28;">
                            <i class="bi bi-house me-1"></i> Retour au dashboard
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    
    <!-- Pagination -->
    {% if totalPages > 1 %}
        <nav aria-label="Navigation des plans" class="mt-5">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" 
                           href="{{ path('app_enseignant_plans', {'page': currentPage-1, 'search': search, 'categorie': categorie}) }}"
                           style="color: #102c59; border-color: #9dbbce;">
                            <i class="bi bi-chevron-left"></i> Précédent
                        </a>
                    </li>
                {% endif %}
                
                {% for page in 1..totalPages %}
                    {% if page >= currentPage - 2 and page <= currentPage + 2 %}
                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                            <a class="page-link" 
                               href="{{ path('app_enseignant_plans', {'page': page, 'search': search, 'categorie': categorie}) }}"
                               style="{{ page == currentPage ? 'background-color: #102c59; border-color: #102c59; color: white;' : 'color: #102c59; border-color: #9dbbce;' }}">
                                {{ page }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
                
                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" 
                           href="{{ path('app_enseignant_plans', {'page': currentPage+1, 'search': search, 'categorie': categorie}) }}"
                           style="color: #102c59; border-color: #9dbbce;">
                            Suivant <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>

<style>
.hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 10px;
    overflow: hidden;
    background: linear-gradient(145deg, #ffffff, #f8fafc);
}

.hover-lift:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(157, 187, 206, 0.25) !important;
}

.card {
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid rgba(157, 187, 206, 0.2);
}

.card-title {
    font-weight: 600;
    border-bottom: 2px solid rgba(157, 187, 206, 0.3);
    padding-bottom: 0.75rem;
}

.badge {
    border-radius: 6px;
    font-size: 0.85em;
    letter-spacing: 0.5px;
    font-weight: 500;
}

.btn {
    transition: all 0.3s ease;
    font-weight: 600;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
}

.btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(16, 44, 89, 0.25);
}

.page-link {
    transition: all 0.3s ease;
    border-radius: 8px;
    margin: 0 3px;
    font-weight: 600;
    border: 2px solid transparent;
}

.page-link:hover {
    background-color: #9dbbce;
    border-color: #9dbbce;
    color: #102c59;
    transform: translateY(-2px);
}

.page-item.active .page-link {
    background-color: #102c59;
    border-color: #102c59;
    color: white;
    box-shadow: 0 4px 12px rgba(16, 44, 89, 0.3);
}

.page-item.disabled .page-link {
    background-color: #f8f9fa;
    border-color: #dee2e6;
    color: #9dbbce;
    opacity: 0.6;
}

/* Animation des cartes au chargement */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.col-md-4 {
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: calc(var(--animation-order) * 0.15s);
    opacity: 0;
}

/* Délai d'animation pour chaque carte */
.col-md-4:nth-child(1) { --animation-order: 1; }
.col-md-4:nth-child(2) { --animation-order: 2; }
.col-md-4:nth-child(3) { --animation-order: 3; }
.col-md-4:nth-child(4) { --animation-order: 4; }
.col-md-4:nth-child(5) { --animation-order: 5; }
.col-md-4:nth-child(6) { --animation-order: 6; }

/* Améliorations de la typographie */
h1 {
    font-weight: 700;
    letter-spacing: -0.5px;
}

.text-muted {
    font-size: 1.1rem;
    letter-spacing: 0.3px;
}

/* Effets subtils */
.card-body {
    background: linear-gradient(to bottom, transparent, rgba(157, 187, 206, 0.03));
}

/* Hover state pour les icônes */
.bi {
    transition: transform 0.3s ease;
}

.card:hover .bi {
    transform: scale(1.1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes au survol
    const cards = document.querySelectorAll('.hover-lift');
    
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.boxShadow = '0 20px 40px rgba(157, 187, 206, 0.3)';
            this.style.background = 'linear-gradient(145deg, #ffffff, #ffffff)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.boxShadow = '';
            this.style.background = 'linear-gradient(145deg, #ffffff, #f8fafc)';
        });
    });
    
    // Animation des boutons
    const buttons = document.querySelectorAll('.btn');
    buttons.forEach(btn => {
        btn.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px)';
        });
        
        btn.addEventListener('mouseleave', function() {
            this.style.transform = '';
        });
    });
    
    // Animation des liens de pagination
    const pageLinks = document.querySelectorAll('.page-link');
    pageLinks.forEach(link => {
        link.addEventListener('mouseenter', function() {
            if (!this.closest('.page-item.active')) {
                this.style.transform = 'translateY(-2px)';
            }
        });
        
        link.addEventListener('mouseleave', function() {
            if (!this.closest('.page-item.active')) {
                this.style.transform = '';
            }
        });
    });
    
    // Gestion des liens de pagination actifs
    const activePageItem = document.querySelector('.page-item.active');
    if (activePageItem) {
        activePageItem.style.transform = 'scale(1.05)';
    }
});
</script>
{% endblock %}