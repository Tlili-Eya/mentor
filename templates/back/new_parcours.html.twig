{% extends 'back/base.html.twig' %}

{% block title %}Nouveau Parcours
{% endblock %}

{% block body %}
	<div class="page-title light-background">
		<div class="container">
			<h1 class="mb-0 text-primary">Nouveau Parcours</h1>
			<nav class="breadcrumbs">
				<ol>
					<li>
						<a href="{{ path('back_home') }}">Home</a>
					</li>
					<li>
						<a href="{{ path('back_parcours') }}">Parcours</a>
					</li>
					<li class="current">Nouveau</li>
				</ol>
			</nav>
		</div>
	</div>

	<section class="section">
		<div class="container">
			<div class="card shadow-sm border-0">
				<div class="card-header bg-white py-3">
					<h5 class="mb-0">Créer un nouveau parcours</h5>
				</div>
				<div class="card-body">
					{{ form_start(form) }}

					<div class="row g-3">
						<div class="col-md-6">
							{{ form_row(form.titre) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.type_parcours) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.etablissement) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.diplome) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.specialite) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.entreprise) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.poste) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.type_contrat) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.date_debut) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.date_fin) }}
						</div>
						<div class="col-12">
							{{ form_row(form.projets) }}
						</div>
						<div class="col-12">
							{{ form_row(form.description) }}
						</div>
					</div>

					<div class="mt-4 text-end">
						<a href="{{ path('back_parcours') }}" class="btn btn-secondary me-2">Annuler</a>
						<button type="submit" class="btn btn-primary">Créer le parcours</button>
					</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
