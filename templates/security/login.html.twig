                    <div class="form-group">
                        <label class="form-label" for="email">
                            <i class="fas fa-envelope me-2"></i>Adresse email
                        </label>
                        <div class="input-group-custom">
                            <input 
                                type="email" 
                                class="form-control" 
                                id="email" 
                                name="_username" 
                                value="{{ last_username }}" 
                                required 
                                autofocus
                                placeholder="votre.email@exemple.com"
                            >
                            <i class="fas fa-envelope"></i>
                        </div>
                    </div>

                    <!-- Mot de passe -->
                    <div class="form-group">
                        <label class="form-label" for="password">
                            <i class="fas fa-lock me-2"></i>Mot de passe
                        </label>
                        <div class="input-group-custom">
                            <input 
                                type="password" 
                                class="form-control" 
                                id="password" 
                                name="_password" 
                                required
                                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                            >
                            <i class="fas fa-lock"></i>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Se souvenir de moi -->
                    <div class="form-check">
                        <input 
                            type="checkbox" 
                            class="form-check-input" 
                            id="remember_me" 
                            name="_remember_me"
                        >
                        <label class="form-check-label" for="remember_me">
                            Se souvenir de moi
                        </label>
                    </div>

                    <!-- Mot de passe oubli√© -->
                    <div class="forgot-password-link" style="text-align: right; margin-bottom: 24px;">
                        <a href="{{ path('app_forgot_password') }}">
                            <i class="fas fa-key me-1"></i>Mot de passe oubli√© ?
                        </a>
                    </div>

                    <script src="https://js.hcaptcha.com/1/api.js" async defer></script>

                    <!-- hCaptcha Widget -->
                    <div class="h-captcha" data-sitekey="{{ hCaptchaSiteKey }}" style="margin-bottom: 20px; display: flex; justify-content: center;"></div>

                    <!-- CSRF Token -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Bouton de connexion -->
                    <button type="submit" class="btn-login" id="submitBtn">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Se connecter</span>
                    </button>

                    <!-- OR Separator -->
                    <div style="display: flex; align-items: center; margin: 20px 0;">
                        <div style="flex-grow: 1; height: 1px; background-color: #ccc;"></div>
