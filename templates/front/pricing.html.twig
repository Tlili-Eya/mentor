{% extends 'front/base.html.twig' %}

{% block title %}Tarifs - MentorAI
{% endblock %}

{% block body %}

	<main
		class="main">

		<!-- Page Title -->
		<div class="page-title light-background">
			<div class="container d-lg-flex justify-content-between align-items-center">
				<h1 class="mb-2 mb-lg-0">Nos Tarifs</h1>
				<nav class="breadcrumbs">
					<ol>
						<li>
							<a href="{{ path('front_home') }}">Accueil</a>
						</li>
						<li class="current">Tarifs</li>
					</ol>
				</nav>
			</div>
		</div>
		<!-- End Page Title -->

		<!-- Pricing Section -->
		<section id="pricing" class="pricing section">

			<div
				class="container pricing-toggle-container" data-aos="fade-up" data-aos-delay="100">

				<!-- Pricing Toggle -->
				<div class="pricing-toggle d-flex align-items-center justify-content-center text-center mb-5">
					<span class="monthly active">Mensuel</span>
					<div class="form-check form-switch d-inline-block mx-3">
						<input class="form-check-input" type="checkbox" id="pricingSwitch">
					</div>
					<span class="yearly">Annuel
						<span class="badge">20% de RÉDUCTION</span>
					</span>
				</div>

				<!-- Pricing Plans -->
				<div
					class="row gy-4 justify-content-center">

					<!-- Basic Plan -->
					<div class="col-lg-3 col-md-6">
						<div class="pricing-item">
							<div class="pricing-header">
								<h6 class="pricing-category">Basique</h6>
								<div class="price-wrap">
									<h2 class="price">Gratuit</h2>
								</div>
								<p class="pricing-description">Idéal pour découvrir MentorAI</p>
							</div>

							<div class="pricing-cta">
								<a href="#" class="btn btn-primary w-100">Continuer</a>
							</div>

							<div class="pricing-features">
								<h6>Le plan Basique inclut :</h6>
								<ul class="feature-list">
									<li>
										<i class="bi bi-check"></i>
										Accès aux projets publics</li>
									<li>
										<i class="bi bi-check"></i>
										5 conversations IA / jour</li>
									<li>
										<i class="bi bi-check"></i>
										Ressources communautaires</li>
									<li>
										<i class="bi bi-check"></i>
										Support par e-mail standard</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Plus Plan -->
					<div class="col-lg-3 col-md-6">
						<div class="pricing-item">
							<div class="pricing-header">
								<h6 class="pricing-category">Plus</h6>
								<div class="price-wrap">
									<div class="price monthly">
										<sup>dt</sup>75<span>/m</span>
									</div>
									<div class="price yearly">
										<sup>dt</sup>65<span>/m</span>
									</div>
								</div>
								<p class="pricing-description">Pour les utilisateurs avancés</p>
							</div>

							<div class="pricing-cta">
								<a href="{{ path('front_checkout', {plan: 'plus'}) }}" class="btn btn-primary w-100">Acheter Maintenant</a>
							</div>

							<div class="pricing-features">
								<h6>Tout de
									<strong>Basique</strong>, plus :</h6>
								<ul class="feature-list">
									<li>
										<i class="bi bi-check"></i>
										Conversations IA illimitées</li>
									<li>
										<i class="bi bi-check"></i>
										Accès aux projets premium</li>
									<li>
										<i class="bi bi-check"></i>
										Exportation de ressources</li>
									<li>
										<i class="bi bi-check"></i>
										Support prioritaire</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Business Plan -->
					<div class="col-lg-3 col-md-6">
						<div class="pricing-item popular">
							<div class="popular-badge">Le plus populaire</div>
							<div class="pricing-header">
								<h6 class="pricing-category">Business</h6>
								<div class="price-wrap">
									<div class="price monthly">
										<sup>dt</sup>135<span>/m</span>
									</div>
									<div class="price yearly">
										<sup>dt</sup>125<span>/m</span>
									</div>
								</div>
								<p class="pricing-description">Solution complète pour les professionnels</p>
							</div>

							<div class="pricing-cta">
								<a href="{{ path('front_checkout', {plan: 'business'}) }}" class="btn btn-primary w-100">Acheter Maintenant</a>
							</div>

							<div class="pricing-features">
								<h6>Tout de
									<strong>Plus</strong>, plus :</h6>
								<ul class="feature-list">
									<li>
										<i class="bi bi-check"></i>
										Projets collaboratifs</li>
									<li>
										<i class="bi bi-check"></i>
										Statistiques avancées</li>
									<li>
										<i class="bi bi-check"></i>
										Gestion d'équipe</li>
									<li>
										<i class="bi bi-check"></i>
										Support dédié 24/7</li>
								</ul>
							</div>
						</div>
					</div>

				</div>
			</div>

		</section>
		<!-- /Pricing Section -->

	</main>

{% endblock %}
