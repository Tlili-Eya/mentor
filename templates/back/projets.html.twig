{% extends 'back/base.html.twig' %}
{% block title %}Projets - MentorAI{% endblock %}

{% block body %}
<section id="add-project" class="enroll section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="section-title text-center mb-5">
            <h2 style="color: #102c59;">Tous les Projets et Ressources</h2>
            <p style="color: #555;">Tableau complet de tous les projets avec leurs ressources associées</p>
        </div>

        <!-- Barre de filtrage et recherche -->
        <div class="card mb-4" style="border: 1px solid #9dbbce;">
            <div class="card-body">
                <form id="filterForm" method="get" action="{{ path('back_projets') }}">
                    <div class="row g-3">
                        <!-- Champ de recherche -->
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #9dbbce; color: #102c59; border-color: #8aa9c0;">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input 
                                    type="text" 
                                    class="form-control" 
                                    name="search" 
                                    placeholder="Rechercher par titre, type ou technologies..." 
                                    value="{{ app.request.get('search') }}"
                                    onkeyup="this.form.submit()"
                                    style="border-color: #9dbbce;"
                                >
                            </div>
                        </div>
                        
                        <!-- Sélecteur de tri -->
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #9dbbce; color: #102c59; border-color: #8aa9c0;">
                                    <i class="fas fa-sort"></i>
                                </span>
                                <select 
                                    class="form-select" 
                                    name="sort" 
                                    onchange="this.form.submit()"
                                    style="border-color: #9dbbce;"
                                >
                                    <option value="">Trier par...</option>
                                    <option value="titre_asc" {{ app.request.get('sort') == 'titre_asc' ? 'selected' : '' }}>Titre (A-Z)</option>
                                    <option value="titre_desc" {{ app.request.get('sort') == 'titre_desc' ? 'selected' : '' }}>Titre (Z-A)</option>
                                    <option value="date_debut_asc" {{ app.request.get('sort') == 'date_debut_asc' ? 'selected' : '' }}>Date début (ancien)</option>
                                    <option value="date_debut_desc" {{ app.request.get('sort') == 'date_debut_desc' ? 'selected' : '' }}>Date début (récent)</option>
                                    <option value="ressources_desc" {{ app.request.get('sort') == 'ressources_desc' ? 'selected' : '' }}>Ressources (décroissant)</option>
                                    <option value="ressources_asc" {{ app.request.get('sort') == 'ressources_asc' ? 'selected' : '' }}>Ressources (croissant)</option>
                                </select>
                            </div>
                        </div>
                        
                        <!-- Bouton export PDF (au centre) -->
                        <div class="col-md-2">
                            <a href="{{ path('back_projets_export_pdf') }}?search={{ app.request.get('search')|url_encode }}&sort={{ app.request.get('sort')|url_encode }}" 
                               class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                               style="background-color: #d52e28; color: white; border-color: #b32420; height: 38px;"
                               target="_blank">
                                <i class="fas fa-file-pdf"></i>
                                <span>PDF</span>
                            </a>
                        </div>
                        
                        <!-- Bouton réinitialiser -->
                        <div class="col-md-2">
                            <a href="{{ path('back_projets') }}" class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                               style="background-color: #102c59; color: white; border-color: #0d2347; height: 38px;">
                                <i class="fas fa-redo"></i>
                                <span>Réinit</span>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {% if projets|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover" style="border: 1px solid #dee2e6;">
                    <thead class="sticky-top" style="background-color: #102c59; color: white;">
                        <tr>
                            <th style="width: 5%; border-color: #0d2347;">ID</th>
                            <th style="width: 15%; border-color: #0d2347;">Titre Projet</th>
                            <th style="width: 10%; border-color: #0d2347;">Type</th>
                            <th style="width: 20%; border-color: #0d2347;">Description</th>
                            <th style="width: 12%; border-color: #0d2347;">Technologies</th>
                            <th style="width: 12%; border-color: #0d2347;">Dates</th>
                            <th style="width: 10%; border-color: #0d2347;">Ressources</th>
                            <th style="width: 16%; border-color: #0d2347;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for projet in projets %}
                            <tr style="background-color: white;">
                                <td>
                                    <span class="badge" style="background-color: #9dbbce; color: #102c59;">{{ projet.id }}</span>
                                </td>
                                <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'titre', this.innerText)" style="color: #102c59; font-weight: 500;">
                                    {{ projet.titre }}
                                </td>
                                <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'type', this.innerText)">
                                    <span class="badge" style="background-color: #f0f4f8; color: #102c59;">{{ projet.type }}</span>
                                </td>
                                <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'description', this.innerText)" style="color: #555;">
                                    {{ projet.description }}
                                </td>
                                <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'technologies', this.innerText)">
                                    <div style="color: #102c59;">
                                        {{ projet.technologies }}
                                    </div>
                                </td>
                                <td>
                                    <div class="timeline-dates">
                                        {% if projet.dateDebut %}
                                            <div class="date-item mb-1">
                                                <i class="fas fa-play-circle me-1" style="color: #9dbbce; font-size: 0.9em;"></i>
                                                <small style="color: #102c59;">{{ projet.dateDebut|date('d/m/Y') }}</small>
                                            </div>
                                        {% endif %}
                                        {% if projet.dateFin %}
                                            <div class="date-item">
                                                <i class="fas fa-flag-checkered me-1" style="color: #9dbbce; font-size: 0.9em;"></i>
                                                <small class="text-muted">→ {{ projet.dateFin|date('d/m/Y') }}</small>
                                            </div>
                                        {% endif %}
                                        {% if projet.dateDebut and projet.dateFin %}
                                            <div class="timeline-bar mt-2" style="height: 3px; background-color: #9dbbce; border-radius: 2px;"></div>
                                        {% endif %}
                                        {% if not projet.dateDebut and not projet.dateFin %}
                                            <em class="text-muted" style="color: #9dbbce;">-</em>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>
                                    {% if projet.ressources|length > 0 %}
                                        <button class="btn btn-sm" 
                                                style="background-color: #9dbbce; color: #102c59; border-color: #8aa9c0;"
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#ressources-{{ projet.id }}" 
                                                aria-expanded="false">
                                            {{ projet.ressources|length }} <i class="fas fa-link"></i>
                                        </button>
                                    {% else %}
                                        <span class="badge" style="background-color: #f0f4f8; color: #9dbbce; border: 1px solid #9dbbce;">
                                            0
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <button class="btn btn-sm" onclick="deleteProjet({{ projet.id }})"
                                            style="background-color: #d52e28; color: white; border-color: #b32420;">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </td>
                            </tr>

                            {% if projet.ressources|length > 0 %}
                                <tr class="collapse" id="ressources-{{ projet.id }}">
                                    <td colspan="8" class="p-0">
                                        <div class="p-4" style="background-color: #f8f9fa; border-top: 2px solid #9dbbce;">
                                            <h6 class="mb-3" style="color: #102c59; border-left: 4px solid #d52e28; padding-left: 10px;">
                                                <strong>Ressources du projet : {{ projet.titre }}</strong>
                                                <span class="badge ms-2" style="background-color: #9dbbce; color: #102c59;">
                                                    {{ projet.ressources|length }} ressource(s)
                                                </span>
                                            </h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm table-hover mb-0" style="border: 1px solid #dee2e6;">
                                                    <thead style="background-color: #f0f4f8;">
                                                        <tr>
                                                            <th scope="col" style="color: #102c59;">ID</th>
                                                            <th scope="col" style="color: #102c59;">Nom</th>
                                                            <th scope="col" style="color: #102c59;">Description</th>
                                                            <th scope="col" style="color: #102c59;">Type</th>
                                                            <th scope="col" style="color: #102c59;">URL</th>
                                                            <th scope="col" style="color: #102c59;">Date Création</th>
                                                            <th scope="col" style="color: #102c59;">Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for ressource in projet.ressources %}
                                                            <tr style="background-color: white;">
                                                                <td>
                                                                    <span class="badge" style="background-color: #9dbbce; color: #102c59;">{{ ressource.id }}</span>
                                                                </td>
                                                                <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'nom', this.innerText)" style="color: #102c59; font-weight: 500;">
                                                                    {{ ressource.nom }}
                                                                </td>
                                                                <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'description', this.innerText)" style="color: #555;">
                                                                    {{ ressource.description }}
                                                                </td>
                                                                <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'typeRessource', this.innerText)">
                                                                    <span class="badge" style="background-color: #f0f4f8; color: #102c59;">{{ ressource.typeRessource.name }}</span>
                                                                </td>
                                                                <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'urlRessource', this.innerText)" style="color: #102c59;">
                                                                    {{ ressource.urlRessource|slice(0, 40) }}{% if ressource.urlRessource|length > 40 %}...{% endif %}
                                                                </td>
                                                                <td>
                                                                    <small style="color: #9dbbce;">
                                                                        <i class="far fa-calendar me-1"></i>{{ ressource.dateCreation|date('d/m/Y') }}
                                                                    </small>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-sm" onclick="deleteRessource({{ ressource.id }})"
                                                                            style="background-color: #d52e28; color: white; border-color: #b32420; padding: 0.25rem 0.5rem;">
                                                                        <i class="fas fa-trash"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert" style="background-color: #9dbbce; border: 1px solid #8aa9c0; color: #102c59;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-info-circle me-3" style="font-size: 1.5em;"></i>
                    <div>
                        <h4 class="alert-heading mb-1" style="color: #102c59;">
                            {% if app.request.get('search') %}
                                Aucun projet trouvé
                            {% else %}
                                Aucun projet enregistré
                            {% endif %}
                        </h4>
                        <p class="mb-0">
                            {% if app.request.get('search') %}
                                Aucun projet ne correspond à votre recherche.
                            {% else %}
                                Aucun projet n'est enregistré dans la base de données.
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>

<style>
    /* Variables pour la charte graphique */
    :root {
        --color-light-blue: #9dbbce;
        --color-dark-blue: #102c59;
        --color-red: #d52e28;
        --color-light-bg: #f8f9fa;
        --color-hover-bg: #f0f4f8;
    }
    
    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
    }
    
    .table-hover tbody tr:hover {
        background-color: var(--color-hover-bg) !important;
        transition: background-color 0.3s ease;
    }
    
    .collapse {
        display: table-row;
    }
    
    .collapse:not(.show) {
        display: none;
    }
    
    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    /* Styles pour la barre de filtrage */
    .input-group-text {
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: var(--color-dark-blue);
        box-shadow: 0 0 0 0.25rem rgba(157, 187, 206, 0.25);
    }
    
    /* Styles pour les boutons */
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
    
    /* Style pour le bouton PDF au survol */
    .btn[style*="background-color: #d52e28"]:hover {
        background-color: #b32420 !important;
        border-color: #9a1a1a !important;
    }
    
    /* Style pour le bouton réinitialiser au survol */
    .btn[style*="background-color: #102c59"]:hover {
        background-color: #0d2347 !important;
        border-color: #0a1b35 !important;
    }
    
    /* Style pour les badges */
    .badge {
        padding: 0.4em 0.8em;
        font-weight: 500;
        border-radius: 4px;
    }
    
    /* Style pour les timeline */
    .timeline-dates {
        position: relative;
    }
    
    .date-item {
        display: flex;
        align-items: center;
    }
    
    .timeline-bar {
        position: relative;
    }
    
    .timeline-bar::before {
        content: '';
        position: absolute;
        left: 0;
        top: -2px;
        width: 8px;
        height: 8px;
        background-color: var(--color-red);
        border-radius: 50%;
    }
    
    .timeline-bar::after {
        content: '';
        position: absolute;
        right: 0;
        top: -2px;
        width: 8px;
        height: 8px;
        background-color: var(--color-dark-blue);
        border-radius: 50%;
    }
    
    /* Style pour les champs éditables */
    [contenteditable="true"]:focus {
        outline: 2px solid var(--color-light-blue);
        border-radius: 4px;
        padding: 2px 4px;
        background-color: var(--color-hover-bg);
    }
    
    /* Animation pour l'ouverture des ressources */
    .collapse.show {
        animation: fadeIn 0.5s ease;
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
function showMessage(message) {
    const messageBox = document.createElement('div');
    messageBox.innerText = message;
    messageBox.style.position = 'fixed';
    messageBox.style.top = '50%';
    messageBox.style.left = '50%';
    messageBox.style.transform = 'translate(-50%, -50%)';
    messageBox.style.backgroundColor = '#102c59';
    messageBox.style.color = '#fff';
    messageBox.style.padding = '1rem 2rem';
    messageBox.style.borderRadius = '5px';
    messageBox.style.boxShadow = '0 4px 12px rgba(16, 44, 89, 0.2)';
    messageBox.style.zIndex = '1050';
    messageBox.style.fontWeight = '500';
    document.body.appendChild(messageBox);

    setTimeout(() => {
        document.body.removeChild(messageBox);
    }, 2000);
}

function updateProjet(id, field, value) {
    fetch(`/admin/update-projet/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ [field]: value }),
    }).then(response => response.json()).then(data => {
        showMessage(data.status);
    });
}

function confirmDeletion(message, callback) {
    const confirmBox = document.createElement('div');
    confirmBox.style.position = 'fixed';
    confirmBox.style.top = '50%';
    confirmBox.style.left = '50%';
    confirmBox.style.transform = 'translate(-50%, -50%)';
    confirmBox.style.backgroundColor = '#fff';
    confirmBox.style.color = '#102c59';
    confirmBox.style.padding = '1.5rem';
    confirmBox.style.borderRadius = '8px';
    confirmBox.style.boxShadow = '0 4px 12px rgba(16, 44, 89, 0.2)';
    confirmBox.style.zIndex = '1050';
    confirmBox.style.textAlign = 'center';
    confirmBox.style.border = '2px solid #9dbbce';

    const messageText = document.createElement('p');
    messageText.innerText = message;
    messageText.style.marginBottom = '1rem';
    messageText.style.fontWeight = '500';
    confirmBox.appendChild(messageText);

    const buttonContainer = document.createElement('div');

    const confirmButton = document.createElement('button');
    confirmButton.innerText = 'Confirmer';
    confirmButton.style.marginRight = '1rem';
    confirmButton.style.padding = '0.5rem 1.5rem';
    confirmButton.style.backgroundColor = '#d52e28';
    confirmButton.style.color = '#fff';
    confirmButton.style.border = 'none';
    confirmButton.style.borderRadius = '4px';
    confirmButton.style.cursor = 'pointer';
    confirmButton.style.fontWeight = '500';
    confirmButton.onclick = () => {
        document.body.removeChild(confirmBox);
        callback();
    };

    const cancelButton = document.createElement('button');
    cancelButton.innerText = 'Annuler';
    cancelButton.style.padding = '0.5rem 1.5rem';
    cancelButton.style.backgroundColor = '#9dbbce';
    cancelButton.style.color = '#102c59';
    cancelButton.style.border = 'none';
    cancelButton.style.borderRadius = '4px';
    cancelButton.style.cursor = 'pointer';
    cancelButton.style.fontWeight = '500';
    cancelButton.onclick = () => {
        document.body.removeChild(confirmBox);
    };

    buttonContainer.appendChild(confirmButton);
    buttonContainer.appendChild(cancelButton);
    confirmBox.appendChild(buttonContainer);

    document.body.appendChild(confirmBox);
}

function deleteProjet(id) {
    confirmDeletion('Êtes-vous sûr de vouloir supprimer ce projet ?', () => {
        fetch(`/admin/delete-projet/${id}`, {
            method: 'DELETE',
        }).then(response => response.json()).then(data => {
            showMessage(data.status);
            setTimeout(() => {
                location.reload();
            }, 1000);
        });
    });
}

function updateRessource(id, field, value) {
    fetch(`/admin/update-ressource/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ [field]: value }),
    }).then(response => response.json()).then(data => {
        showMessage(data.status);
    });
}

function deleteRessource(id) {
    confirmDeletion('Êtes-vous sûr de vouloir supprimer cette ressource ?', () => {
        fetch(`/admin/delete-ressource/${id}`, {
            method: 'DELETE',
        }).then(response => response.json()).then(data => {
            showMessage(data.status);
            setTimeout(() => {
                location.reload();
            }, 1000);
        });
    });
}

// Fonction pour soumettre automatiquement la recherche après un délai
let searchTimeout;
function debounceSearch(input) {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
        input.form.submit();
    }, 500);
}

// Animation pour les boutons de ressources
document.addEventListener('DOMContentLoaded', function() {
    const resourceButtons = document.querySelectorAll('[data-bs-toggle="collapse"]');
    
    resourceButtons.forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.getAttribute('data-bs-target');
            const target = document.querySelector(targetId);
            
            // Animation pour l'icône
            const icon = this.querySelector('i');
            if (target.classList.contains('show')) {
                this.style.backgroundColor = '#9dbbce';
                this.style.color = '#102c59';
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-link');
            } else {
                this.style.backgroundColor = '#102c59';
                this.style.color = 'white';
                icon.classList.remove('fa-link');
                icon.classList.add('fa-chevron-up');
            }
        });
    });
    
    // Animation pour les lignes du tableau
    const tableRows = document.querySelectorAll('tbody tr');
    tableRows.forEach(row => {
        row.addEventListener('mouseenter', function() {
            this.style.boxShadow = '0 4px 8px rgba(16, 44, 89, 0.1)';
        });
        
        row.addEventListener('mouseleave', function() {
            this.style.boxShadow = 'none';
        });
    });
});
</script>
{% endblock %}