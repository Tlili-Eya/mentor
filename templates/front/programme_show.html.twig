{% extends 'front/base.html.twig' %}

{% block title %}Programme : {{ programme.titre }}{% endblock %}

{% block body %}
<main class="container my-5 position-relative">

  <!-- Bouton retour en haut √† gauche -->
  <div class="position-absolute top-0 start-0 mt-4 ms-4">
    <a href="{{ path('front_events_index') }}"
       class="btn btn-outline-primary btn-sm rounded-circle d-flex align-items-center justify-content-center"
       style="width: 38px; height: 38px;"
       title="Retour">
      <i class="bi bi-arrow-left"></i>
    </a>
  </div>

  <!-- Titre + date + message motivant -->
  <div class="text-center mb-5 pt-5">
    <h1 class="display-4 fw-bold" style="color: var(--heading-color);">
      {{ programme.titre }}
    </h1>
    <p class="lead" style="color: var(--default-color);">
      G√©n√©r√© le {{ programme.dategeneration|date('d/m/Y') }}
    </p>

    {% if programme.motivation|length > 0 %}
      {% set dernier = programme.motivation|sort((a,b) => b.dategeneratiomm <=> a.dategeneratiomm)|first %}
      <div class="motivation-box mt-4 p-4 rounded shadow-sm" style="background-color: var(--surface-color); border: 1px solid var(--default-color);">
        <h5 class="mb-3" style="color: var(--accent-color);">
          <i class="bi bi-chat-heart-fill me-2"></i>Message motivant
        </h5>
        <p class="fs-5 mb-2" style="color: var(--default-color); white-space: pre-line;">
          {{ dernier.messagemotivant|default('En cours de g√©n√©ration...') }}
        </p>
        <small style="color: var(--default-color); opacity: 0.7;">
          {{ dernier.dategeneratiomm|date('d/m/Y H:i') }}
        </small>
      </div>
    {% else %}
      <div class="alert alert-light mt-4 text-center py-4" style="background-color: var(--surface-color); color: var(--default-color);">
        Aucun message motivant pour le moment
      </div>
    {% endif %}
  </div>

  <!-- ==================== CADRE SCORE + M√âDAILLE + CERCLE R√âPARTITION ==================== -->
  {% set totalTaches = programme.tache|length %}
  {% set realisees = programme.tache|filter(t => t.etat.value in ['realisee', 'validee'])|length %}
  {% set encours = programme.tache|filter(t => t.etat.value in ['encours', 'en_cours'])|length %}
  {% set abandonnes = programme.tache|filter(t => t.etat.value in ['Abandonner', 'abandonner'])|length %}

  {% set score = totalTaches > 0 ? (realisees * 100 / totalTaches)|round(0) : 0 %}

  {% set medaille = null %}
  {% if score > 0 %}
    {% if score <= 50 %}
      {% set medaille = 'Bronze ü•â' %}
    {% elseif score <= 80 %}
      {% set medaille = 'Argent ü•à' %}
    {% else %}
      {% set medaille = 'Or ü•á' %}
    {% endif %}
  {% endif %}

  {% set pRealisees = totalTaches > 0 ? (realisees * 100 / totalTaches) : 0 %}
  {% set pEncours = totalTaches > 0 ? (encours * 100 / totalTaches) : 0 %}
  {% set pAbandonnes = totalTaches > 0 ? (abandonnes * 100 / totalTaches) : 0 %}

  <!-- ==================== SCORE + DONUT + M√âDAILLE ==================== -->
  <div class="row g-4 mb-5 justify-content-center align-items-stretch">

    <!-- Score -->
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm text-center">
        <div class="card-body d-flex flex-column justify-content-center py-5">
          <h5 class="mb-3" style="color: var(--heading-color);">
            Score total
          </h5>
          <div class="display-4 fw-bold" style="color: var(--accent-color);">
            {{ score }}%
          </div>
          <small class="text-muted mt-2">
            ({{ realisees }} t√¢ches r√©alis√©es)
          </small>
        </div>
      </div>
    </div>

    <!-- Donut R√©partition -->
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm text-center">
        <div class="card-body d-flex flex-column justify-content-center py-4">

          <h5 class="mb-4" style="color: var(--heading-color);">
            R√©partition des t√¢ches
          </h5>

          <div class="d-flex justify-content-center mb-4">
            <div style="
              width:160px;
              height:160px;
              border-radius:50%;
              background:
              conic-gradient(
                #198754 0% {{ pRealisees }}%,
                #ffc107 {{ pRealisees }}% {{ pRealisees + pEncours }}%,
                #dc3545 {{ pRealisees + pEncours }}% 100%
              );
              position:relative;
            ">

              <div style="
                position:absolute;
                top:50%;
                left:50%;
                transform:translate(-50%, -50%);
                width:100px;
                height:100px;
                background:white;
                border-radius:50%;
                display:flex;
                flex-direction:column;
                justify-content:center;
                align-items:center;
              ">
                <span class="fs-3 fw-bold" style="color: var(--accent-color);">
                  {{ totalTaches }}
                </span>
                <small>t√¢ches</small>
              </div>

            </div>
          </div>

          <!-- L√©gende -->
          <div class="text-start small mx-auto" style="max-width:200px;">
            <div class="d-flex align-items-center mb-2">
              <span style="width:12px;height:12px;border-radius:50%;background:#198754;" class="me-2"></span>
              Atteints : <strong class="ms-1">{{ realisees }}</strong>
            </div>
            <div class="d-flex align-items-center mb-2">
              <span style="width:12px;height:12px;border-radius:50%;background:#ffc107;" class="me-2"></span>
              En cours : <strong class="ms-1">{{ encours }}</strong>
            </div>
            <div class="d-flex align-items-center">
              <span style="width:12px;height:12px;border-radius:50%;background:#dc3545;" class="me-2"></span>
              Abandonn√©s : <strong class="ms-1">{{ abandonnes }}</strong>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- M√©daille -->
    <div class="col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm text-center">
        <div class="card-body d-flex flex-column justify-content-center py-5">
          <h5 class="mb-3" style="color: var(--heading-color);">
            M√©daille obtenue
          </h5>

          {% if medaille %}
            <div class="fs-1 fw-bold">
              {{ medaille }}
            </div>
          {% else %}
            <p class="text-muted">Aucune m√©daille</p>
          {% endif %}
        </div>
      </div>
    </div>

  </div>

  <!-- Bouton + Tableau -->
  <div class="text-end mb-3">
    <button type="button"
            class="btn btn-outline-primary btn-sm rounded-pill d-flex align-items-center gap-2 px-3 ms-auto"
            data-bs-toggle="modal"
            data-bs-target="#addTacheModal"
            title="Ajouter une t√¢che">
      <i class="bi bi-plus-lg"></i>
      Ajouter une t√¢che
    </button>
  </div>

  <div class="card shadow-sm mb-5" style="background-color: var(--surface-color); border-color: var(--default-color);">
    <div class="card-header d-flex justify-content-between align-items-center" style="background-color: var(--default-color); color: var(--contrast-color);">
      <h5 class="mb-0">
        <i class="bi bi-list-check me-2"></i>T√¢ches
      </h5>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0 text-center">
          <thead style="background-color: rgba(102, 146, 188, 0.1);">
            <tr>
              <th style="color: var(--heading-color);">Ordre</th>
              <th style="color: var(--heading-color);">Titre</th>
              <th style="color: var(--heading-color);">Description</th>
              <th style="color: var(--heading-color);">√âtat</th>
              <th style="color: var(--heading-color);">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% if programme.tache|length > 0 %}
              {% for tache in programme.tache %}
                <tr>
                  <td class="fw-bold">{{ tache.ordre }}</td>
                  <td class="text-start">{{ tache.titre ?? '‚Äî' }}</td>
                  <td class="text-start">{{ tache.description|default('‚Äî') }}</td>
                  <td>
                    <span class="badge rounded-pill px-4 py-2 fs-6
                      {% if tache.etat.value == 'realisee' %}bg-success text-white
                      {% elseif tache.etat.value == 'encours' %}bg-warning text-dark
                      {% elseif tache.etat.value == 'Abandonner' %}bg-danger text-white
                      {% else %}bg-secondary text-white{% endif %}">
                      {{ tache.etat ? tache.etat.value|capitalize : '‚Äî' }}
                    </span>
                  </td>
                  <td>
                    <!-- Voir -->
                    <a href="{{ path('front_tache_show', {'id': tache.id}) }}"
                       class="btn btn-sm btn-outline-info rounded-circle" title="Voir la t√¢che">
                      <i class="bi bi-eye"></i>
                    </a>
                    <!-- Modifier -->
                    <a href="{{ path('front_tache_edit', {'id': tache.id}) }}"
                       class="btn btn-sm btn-outline-warning rounded-circle" title="Modifier la t√¢che">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <!-- Supprimer -->
                    <form method="post" action="{{ path('front_tache_delete', {'id': tache.id}) }}"
                          onsubmit="return confirm('Supprimer cette t√¢che ? Cette action est irr√©versible.');"
                          class="d-inline">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.id) }}">
                      <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" title="Supprimer la t√¢che">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td colspan="5" class="py-5 text-center text-muted">
                  <i class="bi bi-journal-x fs-3 d-block mb-3"></i>
                  Aucune t√¢che pour le moment
                </td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- ==================== MODAL AJOUT T√ÇCHE ==================== -->
  <div class="modal fade" id="addTacheModal" tabindex="-1" aria-labelledby="addTacheModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content rounded-4 shadow">

        <div class="modal-header border-0 pb-0">
          <h5 class="modal-title fs-4 fw-bold" id="addTacheModalLabel">
            Nouvelle t√¢che pour : {{ programme.titre }}
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4 pt-2">
          {{ form_start(formTache, {'attr': {'novalidate': 'novalidate'}}) }}

          {# Erreurs globales #}
          {{ form_errors(formTache) }}

          <div class="mb-3">
            {{ form_label(formTache.titre) }}
            {{ form_widget(formTache.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formTache.titre) }}
          </div>

          <div class="mb-3">
            {{ form_label(formTache.ordre) }}
            {{ form_widget(formTache.ordre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formTache.ordre) }}
          </div>

          <div class="mb-3">
            {{ form_label(formTache.description) }}
            {{ form_widget(formTache.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(formTache.description) }}
          </div>

          <div class="mb-3">
            {{ form_label(formTache.etat) }}
            {{ form_widget(formTache.etat, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(formTache.etat) }}
          </div>

          <div class="d-flex gap-3 justify-content-end mt-4">
            <button type="button" class="btn btn-outline-secondary btn-sm rounded-pill px-4" data-bs-dismiss="modal">
              Annuler
            </button>
            <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">
              Cr√©er la t√¢che
            </button>
          </div>

          {{ form_end(formTache) }}
        </div>

      </div>
    </div>
  </div>

  <!-- Script pour rouvrir le modal en cas d‚Äôerreur -->
  {% if formTache.vars.submitted and not formTache.vars.valid %}
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        new bootstrap.Modal(document.getElementById('addTacheModal')).show();
      });
    </script>
  {% endif %}

</main>
{% endblock %}