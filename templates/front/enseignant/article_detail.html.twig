{% extends 'front/enseignant/basem.html.twig' %}

{% block title %}{{ article.titre }} - Mentor{% endblock %}

{% block body %}
<div class="page-title py-4" style="background: linear-gradient(135deg, #102c59 0%, #1a3f7a 100%); border-bottom: 3px solid #d52e28;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb" style="background: transparent; padding: 0;">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}" class="text-decoration-none text-white opacity-85">
                                <i class="bi bi-house"></i> Accueil
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_enseignant_articles') }}" class="text-decoration-none text-white opacity-85">
                                Articles
                            </a>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page" style="opacity: 0.9;">
                            {{ article.titre|slice(0, 30) }}{% if article.titre|length > 30 %}...{% endif %}
                        </li>
                    </ol>
                </nav>
                <h1 class="text-white mb-2">{{ article.titre }}</h1>
                <div class="d-flex align-items-center flex-wrap gap-3">
                    {% if article.categorie %}
                        <span class="badge px-3 py-2" style="background-color: #9dbbce; color: #102c59; font-weight: 500; font-size: 0.95rem;">
                            {{ article.categorie.nomCategorie }}
                        </span>
                    {% endif %}
                    <small class="text-white opacity-85">
                        <i class="bi bi-calendar me-1"></i> Publié le {{ article.createdAt|date('d/m/Y à H:i') }}
                    </small>
                    <small class="text-white opacity-85">
                        <i class="bi bi-person-circle me-1"></i> Par Admin
                    </small>
                </div>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a href="{{ path('app_enseignant_articles') }}" class="btn text-white" style="background-color: #d52e28; border-color: #d52e28;">
                    <i class="bi bi-arrow-left me-1"></i> Retour aux articles
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <!-- Contenu principal -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg" style="border-radius: 12px; border-top: 4px solid #102c59;">
                <div class="card-body p-4 p-md-5">
                    <!-- Contenu -->
                    <div class="article-content">
                        {{ article.contenu|raw }}
                    </div>
                    
                    <!-- Tags (optionnel) -->
                    {% if article.tags is defined and article.tags %}
                        <div class="mt-5 pt-4 border-top" style="border-color: #9dbbce !important;">
                            <h5 class="mb-3" style="color: #102c59;">
                                <i class="bi bi-tags me-2"></i>Mots-clés
                            </h5>
                            <div class="d-flex flex-wrap gap-2">
                                {% for tag in article.tags|split(',') %}
                                    {% if tag|trim %}
                                        <span class="badge px-3 py-2" style="background-color: #e9f1f7; color: #102c59; border: 1px solid #9dbbce;">
                                            <i class="bi bi-hash me-1"></i>{{ tag|trim }}
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Navigation entre articles -->
            <div class="mt-5">
                <div class="row">
                    <div class="col-md-6">
                        {% if previousArticle is defined and previousArticle %}
                            <a href="{{ path('app_article_detail', {'id': previousArticle.id}) }}" 
                               class="card border-0 shadow-sm text-decoration-none hover-lift h-100" style="border-left: 4px solid #102c59;">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="bi bi-chevron-left fs-4" style="color: #102c59;"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted">Article précédent</small>
                                            <h6 class="mb-0 mt-1" style="color: #102c59;">{{ previousArticle.titre }}</h6>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {% if nextArticle is defined and nextArticle %}
                            <a href="{{ path('app_article_detail', {'id': nextArticle.id}) }}" 
                               class="card border-0 shadow-sm text-decoration-none hover-lift h-100" style="border-right: 4px solid #102c59;">
                                <div class="card-body text-end">
                                    <div class="d-flex align-items-center justify-content-end">
                                        <div class="me-3">
                                            <small class="text-muted">Article suivant</small>
                                            <h6 class="mb-0 mt-1" style="color: #102c59;">{{ nextArticle.titre }}</h6>
                                        </div>
                                        <div>
                                            <i class="bi bi-chevron-right fs-4" style="color: #102c59;"></i>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4 mt-5 mt-lg-0">
            <!-- Auteur -->
            <div class="card border-0 shadow-sm mb-4" style="border-top: 4px solid #9dbbce;">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px; background-color: #102c59;">
                            <i class="bi bi-person-circle display-5 text-white"></i>
                        </div>
                    </div>
                    <h5 class="card-title" style="color: #102c59;">Admin</h5>
                    <p class="card-text mb-3" style="color: #666;">Auteur pédagogique</p>
                    <div class="d-flex justify-content-center gap-2">
                        <button class="btn btn-sm text-white" style="background-color: #102c59; border-color: #102c59;">
                            <i class="bi bi-envelope"></i> Contact
                        </button>
                        <a href="{{ path('app_enseignant_articles') }}" class="btn btn-sm" style="background-color: #9dbbce; border-color: #9dbbce; color: #102c59;">
                            <i class="bi bi-file-text"></i> Tous les articles
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Articles récents -->
            <div class="card border-0 shadow-sm" style="border-top: 4px solid #d52e28;">
                <div class="card-header border-0" style="background-color: #f8f9fa; border-bottom: 2px solid #9dbbce;">
                    <h5 class="mb-0" style="color: #102c59;">
                        <i class="bi bi-clock-history me-2" style="color: #d52e28;"></i>Articles récents
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for recentArticle in recentArticles|default([]) %}
                            {% if recentArticle.id != article.id %}
                                <a href="{{ path('app_article_detail', {'id': recentArticle.id}) }}" 
                                   class="list-group-item list-group-item-action border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1" style="color: #102c59; font-size: 0.95rem;">
                                                {{ recentArticle.titre|slice(0, 50) }}{% if recentArticle.titre|length > 50 %}...{% endif %}
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>{{ recentArticle.createdAt|date('d/m/Y') }}
                                            </small>
                                        </div>
                                        <i class="bi bi-chevron-right" style="color: #9dbbce;"></i>
                                    </div>
                                </a>
                            {% endif %}
                        {% else %}
                            <div class="text-center py-4">
                                <i class="bi bi-journal-text display-6 mb-3" style="color: #9dbbce;"></i>
                                <p class="text-muted mb-0">Aucun autre article</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Catégorie -->
            {% if article.categorie %}
                <div class="card border-0 shadow-sm mt-4" style="border-top: 4px solid #9dbbce;">
                    <div class="card-header border-0" style="background-color: #f8f9fa; border-bottom: 2px solid #9dbbce;">
                        <h5 class="mb-0" style="color: #102c59;">
                            <i class="bi bi-tag me-2" style="color: #102c59;"></i>Catégorie
                        </h5>
                    </div>
                    <div class="card-body text-center p-4">
                        <span class="badge px-4 py-3 d-inline-block mb-2" style="background-color: #9dbbce; color: #102c59; font-size: 1.1rem; font-weight: 500;">
                            {{ article.categorie.nomCategorie }}
                        </span>
                        <p class="text-muted mb-0 mt-2">
                            <small>Articles dans cette catégorie</small>
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.page-title {
    background-color: #102c59;
}

.article-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
}

.article-content h2, 
.article-content h3, 
.article-content h4 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #102c59;
    font-weight: 600;
}

.article-content h2 {
    font-size: 1.8rem;
    border-bottom: 2px solid #9dbbce;
    padding-bottom: 0.5rem;
}

.article-content h3 {
    font-size: 1.5rem;
}

.article-content h4 {
    font-size: 1.3rem;
}

.article-content p {
    margin-bottom: 1.5rem;
    color: #444;
}

.article-content strong {
    color: #102c59;
}

.article-content em {
    color: #666;
}

.article-content ul, .article-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
}

.article-content li {
    margin-bottom: 0.5rem;
}

.article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.article-content blockquote {
    border-left: 4px solid #102c59;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #555;
    background-color: #f8f9fa;
    border-radius: 0 8px 8px 0;
}

.article-content code {
    background-color: #e9f1f7;
    color: #102c59;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
}

.article-content pre {
    background-color: #102c59;
    color: white;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
}

.article-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
}

.article-content th {
    background-color: #102c59;
    color: white;
    padding: 0.75rem;
    text-align: left;
}

.article-content td {
    border: 1px solid #9dbbce;
    padding: 0.75rem;
}

.article-content tr:nth-child(even) {
    background-color: #f8f9fa;
}

.hover-lift {
    transition: transform 0.3s, box-shadow 0.3s;
    border-radius: 8px;
}

.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(16, 44, 89, 0.15) !important;
}

.breadcrumb-item a:hover {
    color: #9dbbce !important;
    text-decoration: underline;
}

.list-group-item {
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
}

.list-group-item:hover {
    background-color: #f0f4f8;
    border-left: 3px solid #102c59;
    padding-left: 1rem;
}

.badge {
    border-radius: 6px;
}

.btn {
    transition: all 0.3s ease;
    font-weight: 500;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(16, 44, 89, 0.2);
}

/* Animation de fade-in pour le contenu */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.article-content {
    animation: fadeIn 0.8s ease forwards;
}

.card {
    animation: fadeIn 0.6s ease forwards;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des liens de navigation
    const navCards = document.querySelectorAll('.hover-lift');
    navCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-8px)';
            this.style.boxShadow = '0 20px 40px rgba(16, 44, 89, 0.2)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = '';
            this.style.boxShadow = '';
        });
    });
    
    // Animation des articles récents
    const recentArticles = document.querySelectorAll('.list-group-item');
    recentArticles.forEach((item, index) => {
        item.style.animationDelay = (index * 0.1) + 's';
        item.style.opacity = '0';
        item.style.animation = 'fadeIn 0.5s ease forwards';
    });
    
    // Smooth scroll pour les ancres dans le contenu
    const articleLinks = document.querySelectorAll('.article-content a[href^="#"]');
    articleLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            const targetId = this.getAttribute('href');
            if (targetId.startsWith('#')) {
                e.preventDefault();
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 100,
                        behavior: 'smooth'
                    });
                }
            }
        });
    });
    
    // Mise en évidence du code
    const codeBlocks = document.querySelectorAll('.article-content pre');
    codeBlocks.forEach(block => {
        // Ajouter un bouton de copie (optionnel)
        const copyButton = document.createElement('button');
        copyButton.innerHTML = '<i class="bi bi-clipboard"></i>';
        copyButton.className = 'btn btn-sm position-absolute';
        copyButton.style.cssText = 'top: 10px; right: 10px; background-color: #9dbbce; color: #102c59; border: none;';
        
        copyButton.addEventListener('click', function() {
            const code = block.querySelector('code').innerText;
            navigator.clipboard.writeText(code).then(() => {
                const originalHTML = this.innerHTML;
                this.innerHTML = '<i class="bi bi-check"></i>';
                this.style.backgroundColor = '#102c59';
                this.style.color = 'white';
                
                setTimeout(() => {
                    this.innerHTML = originalHTML;
                    this.style.backgroundColor = '#9dbbce';
                    this.style.color = '#102c59';
                }, 2000);
            });
        });
        
        block.style.position = 'relative';
        block.appendChild(copyButton);
    });
});
</script>
{% endblock %}