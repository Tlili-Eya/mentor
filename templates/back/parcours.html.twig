{% extends 'back/base.html.twig' %}
{% block title %}Parcours - MentorAI{% endblock %}

{% block body %}
<section id="parcours-management" class="enroll section">
   <div class="container" data-aos="fade-up" data-aos-delay="100">
      <div class="section-title text-center mb-5">
        <h2>Tous les Parcours</h2>
        <p>Tableau complet de tous les parcours enregistrés</p>
      </div>

<!-- Barre de filtrage et recherche -->
<div class="card mb-4">
    <div class="card-body">
        <form id="filterForm" method="get" action="{{ path('back_parcours') }}">
            <div class="row g-3">
                <!-- Champ de recherche -->
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #102c59; color: white; border-color: #0d2347;">
                            <i class="fas fa-search"></i>
                        </span>
                        <input 
                            type="text" 
                            class="form-control" 
                            name="search" 
                            placeholder="Rechercher par titre, type ou diplôme..." 
                            value="{{ app.request.get('search') }}"
                            onkeyup="this.form.submit()"
                            style="border-color: #102c59;"
                        >
                    </div>
                </div>
                
                <!-- Sélecteur de tri -->
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #102c59; color: white; border-color: #0d2347;">
                            <i class="fas fa-sort"></i>
                        </span>
                        <select 
                            class="form-select" 
                            name="sort" 
                            onchange="this.form.submit()"
                            style="border-color: #102c59;"
                        >
                            <option value="">Trier par...</option>
                            <option value="titre_asc" {{ app.request.get('sort') == 'titre_asc' ? 'selected' : '' }}>Titre (A-Z)</option>
                            <option value="titre_desc" {{ app.request.get('sort') == 'titre_desc' ? 'selected' : '' }}>Titre (Z-A)</option>
                            <option value="type_asc" {{ app.request.get('sort') == 'type_asc' ? 'selected' : '' }}>Type (A-Z)</option>
                            <option value="type_desc" {{ app.request.get('sort') == 'type_desc' ? 'selected' : '' }}>Type (Z-A)</option>
                            <option value="date_debut_asc" {{ app.request.get('sort') == 'date_debut_asc' ? 'selected' : '' }}>Date début (ancien)</option>
                            <option value="date_debut_desc" {{ app.request.get('sort') == 'date_debut_desc' ? 'selected' : '' }}>Date début (récent)</option>
                        </select>
                    </div>
                </div>
                
                <!-- Bouton export PDF (au centre) -->
                <div class="col-md-2">
                    <a href="{{ path('back_parcours_export_pdf') }}?search={{ app.request.get('search')|url_encode }}&sort={{ app.request.get('sort')|url_encode }}" 
                       class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                       style="background-color: #d32f2f; color: white; border-color: #b71c1c; height: 38px;"
                       target="_blank">
                        <i class="fas fa-file-pdf"></i>
                        <span>PDF</span>
                    </a>
                </div>
                
                <!-- Bouton réinitialiser -->
                <div class="col-md-2">
                    <a href="{{ path('back_parcours') }}" 
                       class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                       style="background-color: #6c757d; color: white; border-color: #5a6268; height: 38px;">
                        <i class="fas fa-redo"></i>
                        <span>Réinit</span>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Styles pour les boutons au survol */
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        transition: all 0.3s ease;
    }
    
    /* Style pour les inputs et selects */
    .form-control:focus, .form-select:focus {
        border-color: #102c59;
        box-shadow: 0 0 0 0.25rem rgba(16, 44, 89, 0.25);
    }
    
    /* Style pour le bouton PDF au survol */
    .btn[style*="background-color: #d32f2f"]:hover {
        background-color: #b71c1c !important;
        border-color: #9a1a1a !important;
    }
    
    /* Style pour le bouton réinitialiser au survol */
    .btn[style*="background-color: #6c757d"]:hover {
        background-color: #5a6268 !important;
        border-color: #4e555b !important;
    }
    
    /* Ajustement pour le select */
    .form-select {
        cursor: pointer;
    }
    
    /* Style pour les groupes d'input */
    .input-group-text {
        transition: all 0.3s ease;
    }
    
    .input-group:hover .input-group-text {
        background-color: #0d2347;
    }
</style>

    {% if parcours|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark sticky-top">
                    <tr>
                        <th style="width: 5%">ID</th>
                        <th style="width: 10%">Type</th>
                        <th style="width: 15%">Titre</th>
                        <th style="width: 20%">Description</th>
                        <th style="width: 10%">Dates</th>
                        <th style="width: 30%">Détails spécifiques</th>
                        <th style="width: 10%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for parcours_item in parcours %}
                        <tr>
                            <td>{{ parcours_item.id }}</td>
                            <td>
                                <select class="form-select form-select-sm" onchange="updateParcours({{ parcours_item.id }}, 'type_parcours', this.value)">
                                    <option value="scolaire" {% if parcours_item.typeParcours == 'scolaire' %}selected{% endif %}>Scolaire</option>
                                    <option value="professionnel" {% if parcours_item.typeParcours == 'professionnel' %}selected{% endif %}>Professionnel</option>
                                    <option value="formation" {% if parcours_item.typeParcours == 'formation' %}selected{% endif %}>Formation</option>
                                </select>
                            </td>
                            <td contenteditable="true" onblur="updateParcours({{ parcours_item.id }}, 'titre', this.innerText)">
                                {{ parcours_item.titre }}
                            </td>
                            <td contenteditable="true" onblur="updateParcours({{ parcours_item.id }}, 'description', this.innerText)">
                                {{ parcours_item.description|slice(0, 100) }}{% if parcours_item.description|length > 100 %}...{% endif %}
                            </td>
                            <td>
                                <div class="small">
                                    <div>
                                        <small>Début: </small>
                                        <input type="date" class="form-control form-control-sm" 
                                               value="{{ parcours_item.dateDebut ? parcours_item.dateDebut|date('Y-m-d') : '' }}"
                                               onchange="updateParcours({{ parcours_item.id }}, 'date_debut', this.value)">
                                    </div>
                                    <div class="mt-1">
                                        <small>Fin: </small>
                                        <input type="date" class="form-control form-control-sm" 
                                               value="{{ parcours_item.dateFin ? parcours_item.dateFin|date('Y-m-d') : '' }}"
                                               onchange="updateParcours({{ parcours_item.id }}, 'date_fin', this.value)">
                                    </div>
                                </div>
                            </td>
                            <td>
                                <!-- Champs selon le type -->
                                {% if parcours_item.typeParcours == 'scolaire' %}
                                    <div class="small">
                                        <div><strong>Établissement:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.etablissement ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'etablissement', this.value)">
                                        </div>
                                        <div class="mt-1"><strong>Diplôme:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.diplome ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'diplome', this.value)">
                                        </div>
                                        {% if parcours_item.specialite %}
                                            <div class="mt-1"><strong>Spécialité:</strong>
                                                <input type="text" class="form-control form-control-sm mt-1" 
                                                       value="{{ parcours_item.specialite }}"
                                                       onchange="updateParcours({{ parcours_item.id }}, 'specialite', this.value)">
                                            </div>
                                        {% endif %}
                                    </div>
                                {% elseif parcours_item.typeParcours == 'professionnel' %}
                                    <div class="small">
                                        <div><strong>Entreprise:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.entreprise ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'entreprise', this.value)">
                                        </div>
                                        <div class="mt-1"><strong>Poste:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.poste ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'poste', this.value)">
                                        </div>
                                        {% if parcours_item.typeContrat %}
                                            <div class="mt-1"><strong>Contrat:</strong>
                                                <select class="form-select form-select-sm mt-1" onchange="updateParcours({{ parcours_item.id }}, 'type_contrat', this.value)">
                                                    <option value="">-- Type --</option>
                                                    <option value="CDI" {% if parcours_item.typeContrat == 'CDI' %}selected{% endif %}>CDI</option>
                                                    <option value="CDD" {% if parcours_item.typeContrat == 'CDD' %}selected{% endif %}>CDD</option>
                                                    <option value="Stage" {% if parcours_item.typeContrat == 'Stage' %}selected{% endif %}>Stage</option>
                                                    <option value="Alternance" {% if parcours_item.typeContrat == 'Alternance' %}selected{% endif %}>Alternance</option>
                                                    <option value="Freelance" {% if parcours_item.typeContrat == 'Freelance' %}selected{% endif %}>Freelance</option>
                                                </select>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% elseif parcours_item.typeParcours == 'formation' %}
                                    <div class="small">
                                        <div><strong>Organisme:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.etablissement ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'etablissement', this.value)">
                                        </div>
                                        <div class="mt-1"><strong>Certification:</strong>
                                            <input type="text" class="form-control form-control-sm mt-1" 
                                                   value="{{ parcours_item.diplome ?? '' }}"
                                                   onchange="updateParcours({{ parcours_item.id }}, 'diplome', this.value)">
                                        </div>
                                        {% if parcours_item.specialite %}
                                            <div class="mt-1"><strong>Domaine:</strong>
                                                <input type="text" class="form-control form-control-sm mt-1" 
                                                       value="{{ parcours_item.specialite }}"
                                                       onchange="updateParcours({{ parcours_item.id }}, 'specialite', this.value)">
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick="deleteParcours({{ parcours_item.id }})">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h4 class="alert-heading">
                {% if app.request.get('search') %}
                    Aucun parcours trouvé
                {% else %}
                    Aucun parcours enregistré
                {% endif %}
            </h4>
            <p class="mb-0">
                {% if app.request.get('search') %}
                    Aucun parcours ne correspond à votre recherche.
                {% else %}
                    Aucun parcours n'est enregistré dans la base de données pour le moment.
                {% endif %}
            </p>
        </div>
    {% endif %}
</div>

<script>
// Fonction pour afficher les messages
function showMessage(message) {
    const messageBox = document.createElement('div');
    messageBox.innerText = message;
    messageBox.style.position = 'fixed';
    messageBox.style.top = '50%';
    messageBox.style.left = '50%';
    messageBox.style.transform = 'translate(-50%, -50%)';
    messageBox.style.backgroundColor = '#28a745';
    messageBox.style.color = '#fff';
    messageBox.style.padding = '1rem 2rem';
    messageBox.style.borderRadius = '5px';
    messageBox.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
    messageBox.style.zIndex = '1050';
    document.body.appendChild(messageBox);

    setTimeout(() => {
        document.body.removeChild(messageBox);
    }, 2000);
}

// Fonction de confirmation
function confirmDeletion(message, callback) {
    const confirmBox = document.createElement('div');
    confirmBox.style.position = 'fixed';
    confirmBox.style.top = '50%';
    confirmBox.style.left = '50%';
    confirmBox.style.transform = 'translate(-50%, -50%)';
    confirmBox.style.backgroundColor = '#fff';
    confirmBox.style.color = '#000';
    confirmBox.style.padding = '1.5rem';
    confirmBox.style.borderRadius = '8px';
    confirmBox.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
    confirmBox.style.zIndex = '1050';
    confirmBox.style.textAlign = 'center';

    const messageText = document.createElement('p');
    messageText.innerText = message;
    messageText.style.marginBottom = '1rem';
    confirmBox.appendChild(messageText);

    const buttonContainer = document.createElement('div');

    const confirmButton = document.createElement('button');
    confirmButton.innerText = 'Confirmer';
    confirmButton.style.marginRight = '1rem';
    confirmButton.style.padding = '0.5rem 1rem';
    confirmButton.style.backgroundColor = '#dc3545';
    confirmButton.style.color = '#fff';
    confirmButton.style.border = 'none';
    confirmButton.style.borderRadius = '4px';
    confirmButton.style.cursor = 'pointer';
    confirmButton.onclick = () => {
        document.body.removeChild(confirmBox);
        callback();
    };

    const cancelButton = document.createElement('button');
    cancelButton.innerText = 'Annuler';
    cancelButton.style.padding = '0.5rem 1rem';
    cancelButton.style.backgroundColor = '#6c757d';
    cancelButton.style.color = '#fff';
    cancelButton.style.border = 'none';
    cancelButton.style.borderRadius = '4px';
    cancelButton.style.cursor = 'pointer';
    cancelButton.onclick = () => {
        document.body.removeChild(confirmBox);
    };

    buttonContainer.appendChild(confirmButton);
    buttonContainer.appendChild(cancelButton);
    confirmBox.appendChild(buttonContainer);

    document.body.appendChild(confirmBox);
}

// Mettre à jour un parcours
function updateParcours(id, field, value) {
    fetch(`/admin/update-parcours/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ [field]: value }),
    }).then(response => response.json()).then(data => {
        showMessage(data.status);
    });
}

// Supprimer un parcours
function deleteParcours(id) {
    confirmDeletion('Êtes-vous sûr de vouloir supprimer ce parcours ?', () => {
        fetch(`/admin/delete-parcours/${id}`, {
            method: 'DELETE',
        }).then(response => response.json()).then(data => {
            showMessage(data.status);
            location.reload();
        });
    });
}

// Fonction pour soumettre automatiquement la recherche après un délai
let searchTimeout;
function debounceSearch(input) {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
        input.form.submit();
    }, 500);
}
</script>

<style>
.sticky-top {
    position: sticky;
    top: 0;
    z-index: 10;
}

.table-hover tbody tr:hover {
    background-color: #f8f9fa;
}

.text-truncate {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.form-control-sm, .form-select-sm {
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
}

.small {
    font-size: 0.875rem;
}

/* Styles pour la barre de filtrage */
.input-group-text {
    background-color: #f8f9fa;
    border-color: #dee2e6;
}

.form-control:focus, .form-select:focus {
    border-color: #102c59;
    box-shadow: 0 0 0 0.25rem rgba(16, 44, 89, 0.25);
}

.btn-outline-secondary:hover {
    background-color: #6c757d;
    border-color: #6c757d;
}
</style>
{% endblock %}