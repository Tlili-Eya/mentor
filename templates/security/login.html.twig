    <div class="login-container">
        <div class="login-card">
            <!-- Header -->
            <div class="login-header">
                <!-- Logo du site -->
                <div class="site-logo">
                    <img src="{{ asset('assets/img/123.png') }}" alt="MentorAI Logo">
                </div>

                <h1>Bienvenue</h1>
                <p>Connectez-vous pour acc√©der √† votre espace</p>
