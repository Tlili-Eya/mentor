{% extends 'back/base.html.twig' %}
{% block title %}Projets - MentorAI{% endblock %}

{% block body %}
  <section id="add-project" class="enroll section">

<div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="section-title text-center mb-5">
        <h2>Tous les Projets et Ressources</h2>
        <p>Tableau complet de tous les projets avec leurs ressources associées</p>
    </div>

    <!-- Barre de filtrage et recherche -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="filterForm" method="get" action="{{ path('back_projets') }}">
                <div class="row g-3">
                    <!-- Champ de recherche -->
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: #102c59; color: white; border-color: #0d2347;">
                                <i class="fas fa-search"></i>
                            </span>
                            <input 
                                type="text" 
                                class="form-control" 
                                name="search" 
                                placeholder="Rechercher par titre, type ou technologies..." 
                                value="{{ app.request.get('search') }}"
                                onkeyup="this.form.submit()"
                                style="border-color: #102c59;"
                            >
                        </div>
                    </div>
                    
                    <!-- Sélecteur de tri -->
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: #102c59; color: white; border-color: #0d2347;">
                                <i class="fas fa-sort"></i>
                            </span>
                            <select 
                                class="form-select" 
                                name="sort" 
                                onchange="this.form.submit()"
                                style="border-color: #102c59;"
                            >
                                <option value="">Trier par...</option>
                                <option value="titre_asc" {{ app.request.get('sort') == 'titre_asc' ? 'selected' : '' }}>Titre (A-Z)</option>
                                <option value="titre_desc" {{ app.request.get('sort') == 'titre_desc' ? 'selected' : '' }}>Titre (Z-A)</option>
                                <option value="date_debut_asc" {{ app.request.get('sort') == 'date_debut_asc' ? 'selected' : '' }}>Date début (ancien)</option>
                                <option value="date_debut_desc" {{ app.request.get('sort') == 'date_debut_desc' ? 'selected' : '' }}>Date début (récent)</option>
                                <option value="ressources_desc" {{ app.request.get('sort') == 'ressources_desc' ? 'selected' : '' }}>Ressources (décroissant)</option>
                                <option value="ressources_asc" {{ app.request.get('sort') == 'ressources_asc' ? 'selected' : '' }}>Ressources (croissant)</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Bouton export PDF (au centre) -->
                    <div class="col-md-2">
                        <a href="{{ path('back_projets_export_pdf') }}?search={{ app.request.get('search')|url_encode }}&sort={{ app.request.get('sort')|url_encode }}" 
                           class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                           style="background-color: #d32f2f; color: white; border-color: #b71c1c; height: 38px;"
                           target="_blank">
                            <i class="fas fa-file-pdf"></i>
                            <span>PDF</span>
                        </a>
                    </div>
                    
                    <!-- Bouton réinitialiser -->
                    <div class="col-md-2">
                        <a href="{{ path('back_projets') }}" class="btn w-100 d-flex align-items-center justify-content-center gap-2"
                           style="background-color: #6c757d; color: white; border-color: #5a6268; height: 38px;">
                            <i class="fas fa-redo"></i>
                            <span>Réinit</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if projets|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark sticky-top">
                    <tr>
                        <th style="width: 5%">ID</th>
                        <th style="width: 15%">Titre Projet</th>
                        <th style="width: 10%">Type</th>
                        <th style="width: 20%">Description</th>
                        <th style="width: 12%">Technologies</th>
                        <th style="width: 12%">Dates</th>
                        <th style="width: 10%">Ressources</th>
                        <th style="width: 16%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for projet in projets %}
                        <tr>
                            <td>{{ projet.id }}</td>
                            <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'titre', this.innerText)">{{ projet.titre }}</td>
                            <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'type', this.innerText)">{{ projet.type }}</td>
                            <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'description', this.innerText)">{{ projet.description }}</td>
                            <td contenteditable="true" onblur="updateProjet({{ projet.id }}, 'technologies', this.innerText)">{{ projet.technologies }}</td>
                            <td>
                                {% if projet.dateDebut %}
                                    <small>{{ projet.dateDebut|date('d/m/Y') }}</small>
                                {% endif %}
                                {% if projet.dateFin %}
                                    <br><small class="text-muted">→ {{ projet.dateFin|date('d/m/Y') }}</small>
                                {% endif %}
                                {% if not projet.dateDebut and not projet.dateFin %}
                                    <em class="text-muted">-</em>
                                {% endif %}
                            </td>
                            <td>
                                {% if projet.ressources|length > 0 %}
                                    <button class="btn btn-sm" 
                                            style="background-color: #102c59; color: white; border-color: #0d2347;"
                                            data-bs-toggle="collapse" 
                                            data-bs-target="#ressources-{{ projet.id }}" 
                                            aria-expanded="false">
                                        {{ projet.ressources|length }} <i class="fas fa-link"></i>
                                    </button>
                                {% else %}
                                    <span class="badge" style="background-color: #102c59; color: white;">
                                        0
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick="deleteProjet({{ projet.id }})">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </td>
                        </tr>

                        {% if projet.ressources|length > 0 %}
                            <tr class="collapse" id="ressources-{{ projet.id }}">
                                <td colspan="8" class="p-0">
                                    <div class="p-4 bg-light">
                                        <h6 class="mb-3">
                                            <strong>Ressources du projet : {{ projet.titre }}</strong>
                                            <span class="badge ms-2" style="background-color: #102c59; color: white;">
                                                {{ projet.ressources|length }} ressource(s)
                                            </span>
                                        </h6>
                                        <div class="table-responsive">
                                            <table class="table table-sm table-bordered table-hover mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col">ID</th>
                                                        <th scope="col">Nom</th>
                                                        <th scope="col">Description</th>
                                                        <th scope="col">Type</th>
                                                        <th scope="col">URL</th>
                                                        <th scope="col">Date Création</th>
                                                        <th scope="col">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for ressource in projet.ressources %}
                                                        <tr>
                                                            <td>{{ ressource.id }}</td>
                                                            <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'nom', this.innerText)">{{ ressource.nom }}</td>
                                                            <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'description', this.innerText)">{{ ressource.description }}</td>
                                                            <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'typeRessource', this.innerText)">{{ ressource.typeRessource.name }}</td>
                                                            <td contenteditable="true" onblur="updateRessource({{ ressource.id }}, 'urlRessource', this.innerText)">{{ ressource.urlRessource }}</td>
                                                            <td><small>{{ ressource.dateCreation|date('d/m/Y') }}</small></td>
                                                            <td>
                                                                <button class="btn btn-sm btn-danger" onclick="deleteRessource({{ ressource.id }})">
                                                                    <i class="fas fa-trash"></i> Supprimer
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h4 class="alert-heading">Aucun projet trouvé</h4>
            <p class="mb-0">Aucun projet ne correspond à votre recherche.</p>
        </div>
    {% endif %}
</div>

<style>
    /* Styles pour les boutons au survol */
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        transition: all 0.3s ease;
    }
    
    /* Style pour les inputs et selects */
    .form-control:focus, .form-select:focus {
        border-color: #102c59;
        box-shadow: 0 0 0 0.25rem rgba(16, 44, 89, 0.25);
    }
    
    /* Style pour les badges */
    .badge {
        padding: 0.35em 0.65em;
        font-weight: 600;
    }
    
    /* Style pour le bouton PDF au survol */
    .btn[style*="background-color: #d32f2f"]:hover {
        background-color: #b71c1c !important;
        border-color: #9a1a1a !important;
    }
    
    /* Style pour le bouton réinitialiser au survol */
    .btn[style*="background-color: #6c757d"]:hover {
        background-color: #5a6268 !important;
        border-color: #4e555b !important;
    }
</style>

<script>
function showMessage(message) {
    const messageBox = document.createElement('div');
    messageBox.innerText = message;
    messageBox.style.position = 'fixed';
    messageBox.style.top = '50%';
    messageBox.style.left = '50%';
    messageBox.style.transform = 'translate(-50%, -50%)';
    messageBox.style.backgroundColor = '#28a745';
    messageBox.style.color = '#fff';
    messageBox.style.padding = '1rem 2rem';
    messageBox.style.borderRadius = '5px';
    messageBox.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
    messageBox.style.zIndex = '1050';
    document.body.appendChild(messageBox);

    setTimeout(() => {
        document.body.removeChild(messageBox);
    }, 2000);
}

function updateProjet(id, field, value) {
    fetch(`/admin/update-projet/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ [field]: value }),
    }).then(response => response.json()).then(data => {
        showMessage(data.status);
    });
}

function confirmDeletion(message, callback) {
    const confirmBox = document.createElement('div');
    confirmBox.style.position = 'fixed';
    confirmBox.style.top = '50%';
    confirmBox.style.left = '50%';
    confirmBox.style.transform = 'translate(-50%, -50%)';
    confirmBox.style.backgroundColor = '#fff';
    confirmBox.style.color = '#000';
    confirmBox.style.padding = '1.5rem';
    confirmBox.style.borderRadius = '8px';
    confirmBox.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
    confirmBox.style.zIndex = '1050';
    confirmBox.style.textAlign = 'center';

    const messageText = document.createElement('p');
    messageText.innerText = message;
    messageText.style.marginBottom = '1rem';
    confirmBox.appendChild(messageText);

    const buttonContainer = document.createElement('div');

    const confirmButton = document.createElement('button');
    confirmButton.innerText = 'Confirmer';
    confirmButton.style.marginRight = '1rem';
    confirmButton.style.padding = '0.5rem 1rem';
    confirmButton.style.backgroundColor = '#dc3545';
    confirmButton.style.color = '#fff';
    confirmButton.style.border = 'none';
    confirmButton.style.borderRadius = '4px';
    confirmButton.style.cursor = 'pointer';
    confirmButton.onclick = () => {
        document.body.removeChild(confirmBox);
        callback();
    };

    const cancelButton = document.createElement('button');
    cancelButton.innerText = 'Annuler';
    cancelButton.style.padding = '0.5rem 1rem';
    cancelButton.style.backgroundColor = '#6c757d';
    cancelButton.style.color = '#fff';
    cancelButton.style.border = 'none';
    cancelButton.style.borderRadius = '4px';
    cancelButton.style.cursor = 'pointer';
    cancelButton.onclick = () => {
        document.body.removeChild(confirmBox);
    };

    buttonContainer.appendChild(confirmButton);
    buttonContainer.appendChild(cancelButton);
    confirmBox.appendChild(buttonContainer);

    document.body.appendChild(confirmBox);
}

function deleteProjet(id) {
    confirmDeletion('Êtes-vous sûr de vouloir supprimer ce projet ?', () => {
        fetch(`/admin/delete-projet/${id}`, {
            method: 'DELETE',
        }).then(response => response.json()).then(data => {
            showMessage(data.status);
            location.reload();
        });
    });
}

function updateRessource(id, field, value) {
    fetch(`/admin/update-ressource/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ [field]: value }),
    }).then(response => response.json()).then(data => {
        showMessage(data.status);
    });
}

function deleteRessource(id) {
    confirmDeletion('Êtes-vous sûr de vouloir supprimer cette ressource ?', () => {
        fetch(`/admin/delete-ressource/${id}`, {
            method: 'DELETE',
        }).then(response => response.json()).then(data => {
            showMessage(data.status);
            location.reload();
        });
    });
}

// Fonction pour soumettre automatiquement la recherche après un délai
let searchTimeout;
function debounceSearch(input) {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
        input.form.submit();
    }, 500);
}
</script>

<style>
    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .collapse {
        display: table-row;
    }

    .collapse:not(.show) {
        display: none;
    }

    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    /* Styles pour la barre de filtrage */
    .input-group-text {
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #102c59;
        box-shadow: 0 0 0 0.25rem rgba(16, 44, 89, 0.25);
    }
    
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
{% endblock %}