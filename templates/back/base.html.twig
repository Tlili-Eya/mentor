  <style>
    /* Styles spécifiques pour la sidebar */
    .sidebar-container {
      min-height: 100vh;
      display: flex;
    }
    
    .sidebar {
      width: 250px;
      background: linear-gradient(180deg, #466789 0%, #1a252f 100%);
      color: white;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 1000;
      box-shadow: 3px 0 10px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
    }
    
    .sidebar-content {
      padding: 20px 0;
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    
    .sidebar-logo {
      text-align: center;
      padding: 20px 15px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
      margin-bottom: 20px;
    }
    
    .sidebar-logo img {
      max-width: 150px;
      height: auto;
    }
    
    .sidebar-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .sidebar-nav li {
      margin: 5px 0;
    }
    
    .sidebar-nav a {
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      padding: 12px 20px;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
      border-left: 4px solid transparent;
    }
    
    .sidebar-nav a:hover,
    .sidebar-nav a.active {
      background: rgba(255,255,255,0.1);
      color: white;
      border-left-color: #3498db;
    }
    
    .sidebar-nav a i {
      margin-right: 10px;
      font-size: 18px;
      width: 24px;
      text-align: center;
    }
    
    .sidebar-nav .dropdown-toggle::after {
      margin-left: auto;
      transition: transform 0.3s ease;
    }
    
    .sidebar-nav .dropdown-toggle[aria-expanded="true"]::after {
      transform: rotate(180deg);
    }
    
    .sidebar-nav .dropdown-menu {
      background: rgba(0,0,0,0.2);
      border: none;
      padding: 0;
      margin: 0;
      border-radius: 0;
    }
    
    .sidebar-nav .dropdown-item {
      color: rgba(255,255,255,0.8);
      padding: 10px 20px 10px 50px;
      border-left: 4px solid transparent;
    }
    
    .sidebar-nav .dropdown-item:hover {
      background: rgba(255,255,255,0.1);
      color: white;
      border-left-color: #2ecc71;
    }
    
    .admin-badge {
      margin-top: auto;
      padding: 20px;
      text-align: center;
      border-top: 1px solid rgba(255,255,255,0.1);
    }
    
    .admin-badge .badge {
      background: #e74c3c;
      padding: 8px 15px;
      border-radius: 20px;
      font-size: 0.9em;
    }
    
    .main-content {
      flex: 1;
      margin-left: 250px;
      padding: 20px;
      min-height: 100vh;
      background: #f8f9fa;
    }
    
    .mobile-sidebar-toggle {
      display: none;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1001;
      background: #2c3e50;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      font-size: 1.2em;
    }
    
    @media (max-width: 992px) {
      .sidebar {
        transform: translateX(-100%);
      }
      
      .sidebar.open {
        transform: translateX(0);
      }
      
      .main-content {
        margin-left: 0;
      }
      
      .mobile-sidebar-toggle {
        display: block;
      }
    }
  </style>

  {% block stylesheets %}{% endblock %}
</head>

