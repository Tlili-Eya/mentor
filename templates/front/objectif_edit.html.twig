{% extends 'front/base.html.twig' %}

{% block title %}Modifier l'objectif : {{ objectif.titre }}{% endblock %}

{% block body %}
<div class="container my-5">
  <h1 class="mb-4">Modifier l'objectif</h1>

  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
  {{ form_errors(form) }}

  <div class="mb-3">
    {{ form_label(form.titre) }}
    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.titre) }}
  </div>

  <div class="mb-3">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
    {{ form_errors(form.description) }}
  </div>

  <div class="row g-3">
    <div class="col-md-6">
      {{ form_label(form.datedebut) }}
      {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.datedebut) }}
    </div>
    <div class="col-md-6">
      {{ form_label(form.datefin) }}
      {{ form_widget(form.datefin, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(form.datefin) }}
    </div>
  </div>

  <div class="d-flex gap-3 justify-content-end mt-4">
    <a href="{{ path('front_events') }}" class="btn btn-outline-secondary btn-sm rounded-pill px-4">
      Annuler
    </a>
    <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">
      Enregistrer les modifications
    </button>
  </div>

  {{ form_end(form) }}
</div>
{% endblock %}