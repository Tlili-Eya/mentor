{% extends 'front/enseignant/basem.html.twig' %}

{% block title %}Donner mon Feedback | MentorAI{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header section -->
            <div class="d-flex align-items-center mb-4" data-aos="fade-down">
                <a href="{{ path('app_enseignant_plan_detail', {id: plan.id}) }}" class="btn btn-link text-decoration-none p-0 me-3">
                    <i class="bi bi-arrow-left-circle fs-2 text-primary"></i>
                </a>
                <div>
                    <h1 class="h3 fw-bold mb-0 text-dark">Expertise Terrain</h1>
                    <p class="text-muted mb-0">Évaluez l'efficacité du plan pour <strong>{{ plan.decision }}</strong></p>
                </div>
            </div>

            <!-- Plan Summary Card -->
            <div class="card border-0 shadow-lg mb-4 rounded-4 overflow-hidden" data-aos="fade-up">
                <div class="card-header bg-soft-primary border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center px-2">
                        <span class="badge bg-primary rounded-pill">Rappel du Plan</span>
                        <small class="text-primary fw-bold">{{ plan.date|date('d/m/Y') }}</small>
                    </div>
                </div>
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">{{ plan.decision }}</h5>
                    <p class="text-muted mb-0 small">{{ plan.description|nl2br }}</p>
                </div>
            </div>

            <!-- Feedback Form Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden" data-aos="fade-up" data-aos-delay="100">
                <div class="card-body p-5">
                    <form method="POST">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark h6 mb-3">
                                <i class="bi bi-chat-left-text me-2 text-success"></i>Votre observation pédagogique
                            </label>
                            <textarea name="feedback" class="form-control rounded-4 p-3 border-light shadow-sm" rows="6" 
                                      placeholder="Comment ce plan a-t-il été reçu ? Quels sont les progrès observés ?" required>{{ plan.feedbackEnseignant }}</textarea>
                            <div class="form-text mt-2">Votre feedback sera visible par l'administration pour ajuster les prochaines décisions.</div>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-dark h6 mb-3">
                                    <i class="bi bi-check-circle me-2 text-primary"></i>État d'avancement
                                </label>
                                <select name="statut" class="form-select rounded-pill p-3 border-light shadow-sm">
                                    <option value="EN_COURS" {% if plan.statut.value == 'EN_COURS' %}selected{% endif %}>En cours d'exécution</option>
                                    <option value="FINI" {% if plan.statut.value == 'FINI' %}selected{% endif %}>Terminé (Objectif atteint)</option>
                                    <option value="REJETE" {% if plan.statut.value == 'REJETE' %}selected{% endif %}>Non applicable / Rejeté</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-grid gap-3 d-md-flex justify-content-md-end pt-4 border-top">
                            <a href="{{ path('app_enseignant_plan_detail', {id: plan.id}) }}" class="btn btn-light rounded-pill px-5 py-3 fw-bold">Annuler</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 py-3 fw-bold shadow-lg">
                                <i class="bi bi-send-check me-2"></i>Enregistrer mon Expertise
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: rgba(16, 44, 89, 0.05);
    }
    .form-control:focus, .form-select:focus {
        border-color: #102c59;
        box-shadow: 0 0 0 0.25rem rgba(16, 44, 89, 0.1);
    }
    textarea::placeholder {
        font-style: italic;
        opacity: 0.6;
    }
</style>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script>
    AOS.init({ duration: 800, once: true });
</script>
{% endblock %}