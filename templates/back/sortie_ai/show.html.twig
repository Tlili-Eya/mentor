{# templates/back/sortie_ai/show.html.twig #}
{% extends 'back/basem.html.twig' %}

{% block title %}Analyse IA #{{ sortie_ai.id }}{% endblock %}

{% block body %}
<div class="page-title light-background mb-4">
  <div class="container d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary mb-0">Analyse MentorAI #{{ sortie_ai.id }}</h1>
        <p class="text-muted small mb-0">Généré le {{ sortie_ai.createdAt|date('d/m/Y à H:i') }}</p>
    </div>
    <a href="{{ path('app_sortie_ai_index') }}" class="btn btn-outline-secondary btn-sm rounded-pill">
        <i class="bi bi-arrow-left me-1"></i> Retour à l'historique
    </a>
  </div>
</div>

<section class="section py-0">
  <div class="container">
    <div class="row g-4">
      {# Ligne du haut : Badges et Intro #}
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-4">
                <div class="d-flex flex-wrap gap-2 mb-3">
                    <span class="badge bg-soft-info px-3 py-2 rounded-pill"><i class="bi bi-tag-fill me-1"></i> {{ sortie_ai.typeSortie.value }}</span>
                    <span class="badge bg-soft-primary px-3 py-2 rounded-pill"><i class="bi bi-person-badge-fill me-1"></i> {{ sortie_ai.cible.value }}</span>
                    {% if sortie_ai.criticite.value == 'ELEVE' %}
                        <span class="badge bg-danger px-3 py-2 rounded-pill pulse-danger-soft"><i class="bi bi-exclamation-triangle-fill me-1"></i> CRITIQUE</span>
                    {% else %}
                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill"><i class="bi bi-info-circle-fill me-1"></i> {{ sortie_ai.criticite.value }}</span>
                    {% endif %}
                </div>
                {% if text_intro %}
                    <div class="text-secondary lead fs-6 fst-italic">
                        "{{ text_intro|nl2br }}"
                    </div>
                {% endif %}
            </div>
        </div>
      </div>

      {% if data %}
        {# Affichage des Métriques #}
        {% if data.metrics is defined %}
            <div class="col-12">
                <div class="row g-3">
                    {% for metric in data.metrics %}
                        <div class="col-md-3">
                            <div class="card h-100 border-0 shadow-sm rounded-4 bg-white">
                                <div class="card-body p-3">
                                    <p class="text-muted small fw-bold text-uppercase mb-1" style="font-size: 0.65rem;">{{ metric.label }}</p>
                                    <div class="d-flex align-items-end justify-content-between">
                                        <h3 class="fw-extrabold mb-0 {{ metric.trend == 'up' and metric.label|lower matches '/stress/' ? 'text-danger' : (metric.trend == 'down' and metric.label|lower matches '/réussite|succès/' ? 'text-danger' : 'text-primary') }}">
                                            {{ metric.value }}{{ metric.unit }}
                                        </h3>
                                        <i class="bi bi-graph-{{ metric.trend == 'up' ? 'up' : 'down' }} {{ metric.trend == 'up' ? 'text-success' : 'text-danger' }}"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Alertes et Prédictions #}
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0 text-dark">Diagnostics & Vigilance</h5>
                </div>
                <div class="card-body p-4">
                    {% if data.alerts is defined %}
                        <h6 class="text-uppercase small fw-bold text-muted mb-3"><i class="bi bi-shield-exclamation me-2"></i>Alertes Détectées</h6>
                        <div class="list-group list-group-flush mb-4">
                            {% for alert in data.alerts %}
                                <div class="list-group-item px-0 py-3 border-0 border-bottom d-flex align-items-start gap-3">
                                    <div class="rounded-circle p-2 {{ alert.level == 'high' ? 'bg-soft-danger' : (alert.level == 'medium' ? 'bg-soft-warning' : 'bg-soft-info') }}">
                                        <i class="bi bi-lightning-fill"></i>
                                    </div>
                                    <div>
                                        <p class="mb-0 fw-bold {{ alert.level == 'high' ? 'text-danger' : '' }}">{{ alert.message }}</p>
                                        <span class="badge bg-light text-muted small px-2">Priorité {{ alert.level }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if data.predictions is defined %}
                        <h6 class="text-uppercase small fw-bold text-muted mb-3"><i class="bi bi-crystal-ball me-2"></i>Analyses Prédictives</h6>
                        <div class="row g-3">
                            {% for pred in data.predictions %}
                                <div class="col-md-6">
                                    <div class="p-3 rounded-4 bg-light border-start border-primary border-4 h-100">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="small fw-bold">{{ pred.label }}</span>
                                            <span class="badge bg-primary">{{ pred.probability }}</span>
                                        </div>
                                        <p class="text-muted small mb-0">{{ pred.details }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Décisions Stratégiques #}
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 bg-dark text-white h-100 overflow-hidden">
                <div class="card-header border-0 pt-4 px-4 bg-transparent">
                    <h5 class="fw-bold mb-0"><i class="bi bi-cpu-fill me-2 text-info text-gradient-info"></i>Recommandations IA</h5>
                </div>
                <div class="card-body p-4">
                    {% if data.decisions is defined %}
                        <div class="timeline-simplified">
                            {% for decision in data.decisions %}
                                <div class="decision-item mb-4 pb-3 border-bottom border-secondary border-opacity-25">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-info text-dark small" style="font-size: 0.6rem;">{{ decision.category }}</span>
                                        <span class="text-{{ decision.priority == 'high' ? 'danger' : 'warning' }} small fw-bold">Prio {{ decision.priority }}</span>
                                    </div>
                                    <p class="mb-0 small fw-medium">{{ decision.action }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <div class="mt-auto pt-3">
                        <a href="{{ path('app_plan_actions_new', {from_sortie: sortie_ai.id}) }}" class="btn btn-info w-100 rounded-pill py-2 fw-bold transition-all hover-scale shadow-sm">
                            <i class="bi bi-lightning-charge-fill me-1"></i> Transformer en Plan d'Action
                        </a>
                    </div>
                </div>
            </div>
        </div>
      {% else %}
        {# Cas par défaut si pas de JSON #}
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Contenu du message</h5>
                    <div class="p-4 bg-light rounded-4 text-dark fst-italic">
                        {{ sortie_ai.contenu|nl2br }}
                    </div>
                </div>
            </div>
        </div>
      {% endif %}
      
      {# Actions de gestion #}
      <div class="col-12 mb-5">
        <div class="d-flex gap-2 justify-content-end">
            <button type="button" class="btn btn-outline-danger btn-sm px-4 rounded-pill" 
                    onclick="MentorUI.confirm({
                        type: 'danger',
                        title: 'Suppression',
                        message: 'Voulez-vous vraiment supprimer cette analyse ?',
                        onConfirm: () => document.getElementById('delete-form').submit()
                    })">
                <i class="bi bi-trash me-1"></i> Supprimer
            </button>
            <form id="delete-form" method="post" action="{{ path('app_sortie_ai_delete', {id: sortie_ai.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie_ai.id) }}">
            </form>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
    .fw-extrabold { font-weight: 800; }
    .bg-soft-info { background-color: rgba(13, 202, 240, 0.1); color: #0dcaf0; }
    .bg-soft-primary { background-color: rgba(13, 110, 253, 0.1); color: #0d6efd; }
    .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1); color: #ffc107; }
    .bg-soft-danger { background-color: rgba(220, 53, 69, 0.1); color: #dc3545; }
    
    .text-gradient-info {
        background: linear-gradient(90deg, #0dcaf0, #00d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @keyframes pulse-danger-soft {
        0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4); }
        70% { box-shadow: 0 0 0 6px rgba(220, 53, 69, 0); }
        100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
    }
    .pulse-danger-soft { animation: pulse-danger-soft 2s infinite; }

    .hover-scale { transition: transform 0.2s; }
    .hover-scale:hover { transform: scale(1.02); }
</style>
{% endblock %}