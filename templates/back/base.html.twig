{% extends 'back/base.html.twig' %}

{% block title %}Objectifs de {{ utilisateur.prenom }} {{ utilisateur.nom }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            Objectifs de {{ utilisateur.prenom }} {{ utilisateur.nom }}
            <small class="text-muted ms-2">({{ utilisateur.email }})</small>
        </h1>
        <a href="{{ path('back_objectif_utilisateur') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
        </a>
    </div>

    {% if objectifs|length > 0 %}
        <div class="row g-4">
            {% for objectif in objectifs %}
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body">
                            <h5 class="card-title mb-3">{{ objectif.titre }}</h5>
                            
                            <p class="card-text text-muted mb-3">
                                {{ objectif.description|length > 120 ? objectif.description|slice(0, 120) ~ '...' : objectif.description }}
                            </p>

                            <div class="mb-3 small">
                                <div><strong>Date début :</strong> {{ objectif.datedebut ? objectif.datedebut|date('d/m/Y') : 'Non définie' }}</div>
                                <div><strong>Date fin :</strong> {{ objectif.datefin ? objectif.datefin|date('d/m/Y') : 'Non définie' }}</div>
                                <div>
                                    <strong>Statut :</strong> 
                                    <span class="badge {% if objectif.statut == 'Atteint' %}bg-success{% elseif objectif.statut == 'EnCours' %}bg-primary{% else %}bg-danger{% endif %} ms-1">
                                        {{ objectif.statut }}
                                    </span>
                                </div>
                            </div>

                            <a href="{{ path('back_events_show', {'id': objectif.id}) }}" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye me-1"></i> Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-3 fs-3"></i>
            <div>Cet utilisateur n’a pas encore d’objectifs.</div>
        </div>
    {% endif %}
</div>
{% endblock %}