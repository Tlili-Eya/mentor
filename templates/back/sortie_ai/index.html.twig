{% extends 'back/basem.html.twig' %}

{% block title %}Historique des Sorties IA{% endblock %}

{% block body %}

<div class="page-title light-background">
  <div class="container d-lg-flex justify-content-between align-items-center">
    <h1 class="mb-2 mb-lg-0 text-primary">Historique des Sorties IA</h1>
    <nav class="breadcrumbs">
      <ol>
        <li><a href="{{ path('back_home') }}">Accueil</a></li>
        <li class="current">Sorties IA</li>
      </ol>
    </nav>
  </div>
</div>

<section class="section">
  <div class="container">

    {% for message in app.flashes('success') %}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endfor %}

    {# HEADER SANS BOUTON AJOUTER - JUSTE TITRE ET STATS #}
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-0 text-secondary">Historique des Sorties IA ({{ total }})</h2>
        <p class="text-muted mb-0">
          <i class="bi bi-info-circle"></i> 
          Les sorties IA sont générées automatiquement par l'assistant intelligent
        </p>
      </div>
      <a href="{{ path('app_sortie_ai_stats') }}" class="btn btn-outline-primary">
        <i class="bi bi-graph-up"></i> Statistiques
      </a>
    </div>

    <form method="get" class="row mb-3 g-3">
      <div class="col-md-3">
        <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ search }}">
      </div>
      <div class="col-md-2">
        <select name="cible" class="form-select">
          <option value="">Toutes les cibles</option>
          <option value="ETUDIANT" {% if cible == 'ETUDIANT' %}selected{% endif %}>Étudiant</option>
          <option value="CLASSE" {% if cible == 'CLASSE' %}selected{% endif %}>Classe</option>
          <option value="ENSEIGNANT" {% if cible == 'ENSEIGNANT' %}selected{% endif %}>Enseignant</option>
          <option value="ADMINISTRATEUR" {% if cible == 'ADMINISTRATEUR' %}selected{% endif %}>Administrateur</option>
        </select>
      </div>
      <div class="col-md-2">
        <select name="type" class="form-select">
          <option value="">Tous les types</option>
          <option value="ALERTE" {% if typeSortie == 'ALERTE' %}selected{% endif %}>Alerte</option>
          <option value="PREDICTION" {% if typeSortie == 'PREDICTION' %}selected{% endif %}>Prédiction</option>
          <option value="RECOMMANDATION" {% if typeSortie == 'RECOMMANDATION' %}selected{% endif %}>Recommandation</option>
        </select>
      </div>
      <div class="col-md-2">
        <select name="criticite" class="form-select">
          <option value="">Toutes criticités</option>
          <option value="FAIBLE" {% if criticite == 'FAIBLE' %}selected{% endif %}>Faible</option>
          <option value="MOYEN" {% if criticite == 'MOYEN' %}selected{% endif %}>Moyen</option>
          <option value="ELEVE" {% if criticite == 'ELEVE' %}selected{% endif %}>Élevé</option>
        </select>
      </div>
      <div class="col-md-2">
        <select name="statut" class="form-select">
          <option value="">Tous les status</option>
          <option value="NOUVEAU" {{ statut == 'NOUVEAU' ? 'selected' : '' }}>Nouveau</option>
          <option value="PLANIFIE" {{ statut == 'PLANIFIE' ? 'selected' : '' }}>Planifié</option>
          <option value="IGNORE" {{ statut == 'IGNORE' ? 'selected' : '' }}>Ignoré</option>
        </select>
      </div>
      <div class="col-md-2">
        <select name="sort" class="form-select">
          <option value="createdAt" {% if sortBy == 'createdAt' %}selected{% endif %}>Date création</option>
          <option value="cible" {% if sortBy == 'cible' %}selected{% endif %}>Cible</option>
          <option value="typeSortie" {% if sortBy == 'typeSortie' %}selected{% endif %}>Type</option>
          <option value="criticite" {% if sortBy == 'criticite' %}selected{% endif %}>Criticité</option>
          <option value="statut" {% if sortBy == 'statut' %}selected{% endif %}>Status</option>
        </select>
      </div>
      <div class="col-md-1">
        <button type="submit" class="btn btn-primary w-100">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </form>

    <div class="card shadow-sm border-0">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead style="background-color: #eef3f7;">
              <tr class="text-secondary">
                <th>#</th>
                <th>Type</th>
                <th>Cible</th>
                <th>Criticité</th>
                <th>Contenu</th>
                <th class="text-center">Traitement</th>
                <th>Date</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>

            <tbody>
              {% for sortie in sorties %}
                <tr>
                  <td>{{ sortie.id }}</td>
                  <td>
                    {% if sortie.typeSortie.value == 'ALERTE' %}
                      <span class="badge bg-warning text-dark">{{ sortie.typeSortie.value }}</span>
                    {% elseif sortie.typeSortie.value == 'PREDICTION' %}
                      <span class="badge bg-info">{{ sortie.typeSortie.value }}</span>
                    {% else %}
                      <span class="badge bg-success">{{ sortie.typeSortie.value }}</span>
                    {% endif %}
                  </td>
                  <td>{{ sortie.cible.value }}</td>
                  <td>
                    {% if sortie.criticite.value == 'ELEVE' %}
                      <span class="badge bg-danger pulse-danger-soft">ÉLEVÉ</span>
                    {% elseif sortie.criticite.value == 'MOYEN' %}
                      <span class="badge bg-warning text-dark">MOYEN</span>
                    {% else %}
                      <span class="badge bg-secondary">FAIBLE</span>
                    {% endif %}
                  </td>
                  <td title="{{ sortie.contenu }}">{{ sortie.contenu|length > 40 ? sortie.contenu|slice(0, 40) ~ '...' : sortie.contenu }}</td>
                  <td class="text-center">
                    {% set statut = sortie.statut %}
                    <span class="badge rounded-pill bg-soft-{{ statut.getColor() }} text-{{ statut.getColor() }} border border-{{ statut.getColor() }} border-opacity-25 shadow-sm">
                        <i class="bi bi-{{ statut.value == 'PLANIFIE' ? 'check-circle-fill' : (statut.value == 'IGNORE' ? 'dash-circle' : 'plus-circle') }} me-1"></i>
                        {{ statut.getLabel() }}
                    </span>
                  </td>
                  <td>{{ sortie.createdAt|date('d/m/Y') }}</td>
                  <td class="text-end">
                    <div class="btn-group">
                        <a href="{{ path('app_sortie_ai_show', {id: sortie.id}) }}" class="btn btn-sm btn-outline-info" title="Voir détails">
                            <i class="bi bi-eye"></i>
                        </a>
                        
                        {% if sortie.statut.value == 'NOUVEAU' %}
                            <a href="{{ path('app_plan_actions_new', {from_sortie: sortie.id}) }}" class="btn btn-sm btn-primary" title="Transformer en Plan d'Action">
                                <i class="bi bi-lightning-fill"></i> Agir
                            </a>
                            <form method="post" action="{{ path('app_sortie_ai_ignore', {id: sortie.id}) }}" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-secondary" title="Ignorer cette alerte">
                                    <i class="bi bi-slash-circle"></i>
                                </button>
                            </form>
                        {% endif %}

                        <form id="delete-form-{{ sortie.id }}" method="post" action="{{ path('app_sortie_ai_delete', {id: sortie.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
                        <button type="button" class="btn btn-sm btn-outline-danger shadow-none" title="Supprimer" 
                                onclick="MentorUI.confirm({
                                    type: 'danger',
                                    title: 'Supprimer Sortie IA',
                                    message: 'Voulez-vous vraiment supprimer cette sortie IA ?',
                                    onConfirm: () => document.getElementById('delete-form-{{ sortie.id }}').submit()
                                })">
                            <i class="bi bi-trash"></i>
                        </button>
                        </form>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="8" class="text-center py-4 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Aucune sortie IA générée pour le moment</p>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {% if totalPages > 1 %}
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          {% if currentPage > 1 %}
            <li class="page-item">
              <a class="page-link" href="{{ path('app_sortie_ai_index', {page: currentPage - 1, search: search, sort: sortBy, order: order, cible: cible, type: typeSortie, criticite: criticite, statut: statut}) }}">Précédent</a>
            </li>
          {% endif %}

          {% for i in 1..totalPages %}
            <li class="page-item {% if i == currentPage %}active{% endif %}">
              <a class="page-link" href="{{ path('app_sortie_ai_index', {page: i, search: search, sort: sortBy, order: order, cible: cible, type: typeSortie, criticite: criticite, statut: statut}) }}">{{ i }}</a>
            </li>
          {% endfor %}

          {% if currentPage < totalPages %}
            <li class="page-item">
              <a class="page-link" href="{{ path('app_sortie_ai_index', {page: currentPage + 1, search: search, sort: sortBy, order: order, cible: cible, type: typeSortie, criticite: criticite, statut: statut}) }}">Suivant</a>
            </li>
          {% endif %}
        </ul>
      </nav>
    {% endif %}

  </div>
</section>


<style>
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); }
    .bg-soft-secondary { background-color: rgba(108, 117, 125, 0.1); }
    .bg-soft-info { background-color: rgba(13, 202, 240, 0.1); }
    
    @keyframes pulse-danger-soft {
        0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4); }
        70% { box-shadow: 0 0 0 6px rgba(220, 53, 69, 0); }
        100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
    }
    .pulse-danger-soft { animation: pulse-danger-soft 2s infinite; }

    .btn-group .btn { margin-right: 2px; border-radius: 4px !important; }
    .btn-group .btn:last-child { margin-right: 0; }
</style>
{% endblock %}
